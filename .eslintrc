{
  "extends": "jolicode",
  "plugins": [
    "react"
  ],
  "globals": {
    "$": true,
    "google": true,
    "CKEDITOR": true,
    "JsDiff": true,
    "autosize": true,
    "React": true,
    "ReactRouter": true,
    "ReactIntl": true,
    "ReactBootstrap": true,
    "ReactRouterBootstrap": true,
    "Flux": true,
    "EventEmitter",
    "document": true,
    "classNames": true,
    "Modernizr": true,
    "Quill": true,
    "moment": true,
    "jQuery": true,
  },
  "rules": {
    "no-nested-ternary": 0,
    "react/prefer-es6-class": 0,
    "react/jsx-closing-bracket-location": 0,
  }
}
