{
  "extends": "jolicode",
  "plugins": [
    "react",
    "mocha"
  ],
  "globals": {
    "$": true,
    "google": true,
    "CKEDITOR": true,
    "document": true,
    "Modernizr": true,
    "jQuery": true
  },
  "rules": {
    "no-nested-ternary": 0,
    "react/prefer-es6-class": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/prefer-stateless-function": 0,
    "arrow-body-style": 0,
    "max-len": 0,
    "object-shorthand": 0,
    "quote-props": 0,
    "react/jsx-indent-props": 0,
    "prefer-template": 0,
    "no-param-reassign": 0,
    "react/jsx-no-bind": 0,
    "consistent-return": 0,
    "array-callback-return": 0,
    "no-return-assign": 0
  }
}
