[version]
0.75.0

[lints]
all=warn

[ignore]
; ignore module source to prefer libdef
.*/node_modules/*
.*/bower_components/*
; ignore compiled files
.*/web/*
; large dirs that are not imported
.*/vendor/*
.*/app/Resources/assets/js/ckeditor/*

[libs]
flow-typed

[options]
emoji=true
module.use_strict=true

; This enforce a good practice
experimental.const_params=true

; We are using this for * as React
esproposal.export_star_as=enable

; We are not using decorators
esproposal.decorators=ignore

; An IDE is a much better interface to show warningsâ€¦
;include_warnings=true
