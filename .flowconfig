[version]
0.106.3

[lints]
all=warn
sketchy-null-bool=off

[ignore]
; ignore module source to prefer libdef
.*/node_modules/react-beautiful-dnd/*
.*/node_modules/react-select/*
.*/node_modules/react-leaflet/*
.*/node_modules/graphql/*
.*/node_modules/relay-flow-types-installer/*

; ignore compiled files
.*/web/*
; large dirs that are not imported
.*/vendor/*
.*/app/Resources/assets/*
.*/app/Resources/fonts/*
.*/.storybook/*
.*/docs/*
.*/coverage/*
.*/codemod/*
; ignore synthesis
.*/SynthesisElementActions.js
.*/SynthesisDisplayRules.js
.*/SynthesisViewBoxApp.js
.*/SynthesisEditBoxApp.js
.*/SynthesisActions.js
.*/SynthesisStore.js
.*/SynthesisBox.js

[libs]
flow-typed

[strict]

[options]
; for VSCode
; experimental.types_first=true
; experimental.well_formed_exports=true
; experimental.lsp.code_actions=true

server.max_workers=4

suppress_type=$FlowIssue
suppress_type=$FlowFixMe
suppress_type=$FlowFixMeProps
suppress_type=$FlowFixMeState

suppress_comment=\\(.\\|\n\\)*\\$FlowFixMe\\($\\|[^(]\\|(\\(<VERSION>\\)? *\\(site=[a-z,_]*oss[a-z,_]*\\)?)\\)
suppress_comment=\\(.\\|\n\\)*\\$FlowIssue\\((\\(<VERSION>\\)? *\\(site=[a-z,_]*oss[a-z,_]*\\)?)\\)?:? #[0-9]+
suppress_comment=\\(.\\|\n\\)*\\$FlowExpectedError

emoji=true
module.use_strict=true

module.system.node.resolve_dirname=node_modules
module.system.node.resolve_dirname=__generated__
module.system.node.resolve_dirname=app/Resources/js/__generated__

esproposal.optional_chaining=enable
esproposal.class_static_fields=enable
esproposal.class_instance_fields=enable

; This enforce a good practice; We can't activate this because of react-relay
experimental.const_params=false

; We are using this for * as React
esproposal.export_star_as=enable

; We are not using decorators
esproposal.decorators=ignore

; An IDE is a much better interface to show warningsâ€¦
;include_warnings=true

; Flow mapping to handle webpack aliases
module.name_mapper='~ui\/\(.*\)$' -> '<PROJECT_ROOT>/app/Resources/js/components/Ui/\1'
module.name_mapper='~/\(.*\)$' -> '<PROJECT_ROOT>/app/Resources/js/\1'
