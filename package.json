{
  "name": "platform",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "typecheck": "flow check",
    "typecheck:coverage": "flow-coverage-report -i 'app/Resources/js/**/*.js'",
    "build": "NODE_ENV=development ./node_modules/brunch/bin/brunch build",
    "build:watch": "NODE_ENV=development ./node_modules/brunch/bin/brunch watch",
    "build:prod": "NODE_ENV=production ./node_modules/brunch/bin/brunch build --production",
    "build-server-bundle": "NODE_ENV=development ./node_modules/webpack/bin/webpack.js --config webpack.config.serverside.js",
    "build-server-bundle:prod": "NODE_ENV=production ./node_modules/webpack/bin/webpack.js --config webpack.config.serverside.js",
    "checkcs": "eslint app/Resources/js",
    "lint": "eslint --cache --fix app/Resources/js",
    "prettier": "prettier --write --bracket-spacing --single-quote --jsx-bracket-same-line --trailing-comma all --print-width 80 \"app/Resources/js/**/*.js\"",
    "precommit": "lint-staged"
  },
  "pre-commit": "precommit",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --bracket-spacing --single-quote --jsx-bracket-same-line --trailing-comma all --print-width 80",
      "git add"
    ],
    "*.php": [
      "php-cs-fixer fix --config=.php_cs",
      "git add"
    ],
    "*.py": [
      "autopep8 --in-place --aggressive --aggressive --ignore=E501",
      "git add"
    ],
    "*.twig": [
      "php bin/console lint:twig"
    ]
  },
  "jest": {
    "roots": [
      "app/Resources/js"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "\\-test.js$",
    "setupFiles": [
      "<rootDir>/jest-setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-enzyme"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  },
  "dependencies": {
    "autosize": "^3.0.15",
    "babel-brunch": "^6.1.1",
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-display-name": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "babel-template": "^6.23.0",
    "bower": "^1.7.7",
    "brunch": "^2.10.8",
    "classnames": "^2.2.3",
    "clean-css-brunch": "^2.10.0",
    "diff": "^3.2.0",
    "exports-loader": "^0.6.3",
    "fancybox": "^3.0.0",
    "flat": "^2.0.1",
    "flux": "^2.1.1",
    "imports-loader": "^0.7.0",
    "jquery": "^3.1.0",
    "json-brunch": "^1.5.4",
    "lint-staged": "^3.4.1",
    "lodash": "^4.17.4",
    "mailcheck": "^1.1.1",
    "moment": "^2.11.2",
    "normalizr": "^2.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.0",
    "process-env-brunch": "^1.4.4-d",
    "qs": "^6.3.1",
    "quill": "^0.20.1",
    "react": "^15.4.2",
    "react-addons-shallow-compare": "^15.4.2",
    "react-bootstrap": "^0.29.5",
    "react-checkbox-group": "https://github.com/spyl94/react-checkbox-group/tarball/296721a62a682c5e441bdd449704550b69257af9",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.2",
    "react-dropzone": "^3.3.4",
    "react-google-charts": "^1.0.2",
    "react-google-recaptcha": "^0.5.2",
    "react-intl": "1.2.0",
    "react-linkify": "^0.1.1",
    "react-nl2br": "^0.2.0",
    "react-on-rails": "^6.6.0",
    "react-radio": "^2.1.1",
    "react-redux": "^5.0.3",
    "react-router": "^2.7.0",
    "react-router-bootstrap": "^0.23.1",
    "react-select": "1.0.0-rc.2",
    "react-sortable-hoc": "^0.6.1",
    "react-toggle": "^2.2.1",
    "react-treebeard": "https://github.com/cap-collectif/react-treebeard/tarball/6995b4123e3f3d94a4fb9200f884b3371e168628",
    "react-truncate": "^2.0.5",
    "readmore": "0.0.2",
    "redux": "^3.6.0",
    "redux-form": "^6.6.3",
    "redux-saga": "^0.11.1",
    "sass-brunch": "^2.10.4",
    "uglify-js-brunch": "^2.10.0",
    "webpack": "^1.13.2",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-brunch": "^3.12.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.45.0",
    "flow-coverage-report": "^0.3.0",
    "jest": "^19.0.2",
    "jest-serializer-enzyme": "^1.0.0",
    "react-addons-test-utils": "^15.4.2"
  }
}
