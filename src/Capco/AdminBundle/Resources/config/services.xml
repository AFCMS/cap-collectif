<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="capco.type_display_extension.class">Capco\AdminBundle\Twig\TypeDisplayExtension</parameter>
        <parameter key="capco_admin.blog.block.recent_post.class">Capco\AdminBundle\Block\RecentPostBlockService</parameter>
        <parameter key="capco_admin.blog.post.repository.class">Capco\AppBundle\Repository\PostRepository</parameter>
    </parameters>

    <services>
        <service id="capco.twig.type_display" class="%capco.type_display_extension.class%">
            <argument type="service" id="translator" />
            <tag name="twig.extension" />
        </service>

        <service id="capco_admin.blog.post.repository"
                 class="%capco_admin.blog.post.repository.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
                <argument>CapcoAppBundle:Post</argument>
        </service>

        <service id="capco_admin.blog.block.recent_posts" class="%capco_admin.blog.block.recent_post.class%">
            <argument>capco_admin.blog.block.recent_posts</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="capco_admin.blog.post.repository" />
            <argument type="service" id="capco.toggle.manager" />
            <tag name="sonata.block" />
        </service>
    </services>
</container>
