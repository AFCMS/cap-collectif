<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="capco_admin.blog.block.recent_post.class">Capco\AdminBundle\Block\RecentPostBlockService</parameter>
    </parameters>

    <services>

        <service id="capco_admin.blog.block.recent_posts" class="%capco_admin.blog.block.recent_post.class%">
            <argument>capco_admin.blog.block.recent_posts</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="capco.blog.post.repository" />
            <argument type="service" id="capco.toggle.manager" />
            <tag name="sonata.block" />
        </service>

        <service id="capco.admin.features_category_resolver" class="Capco\AdminBundle\Resolver\FeaturesCategoryResolver">
            <argument type="service" id="capco.toggle.manager" />
        </service>

        <service id="capco.admin.features_category_extension" class="Capco\AdminBundle\Twig\FeaturesCategoryExtension">
            <argument type="service" id="capco.admin.features_category_resolver" />
            <tag name="twig.extension" />
        </service>

        <service id="capco.model_type.extension" class="Capco\AdminBundle\Form\Extension\ModelTypeExtension">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="form.type_extension" extended-type="sonata_type_model" />
        </service>

        <service id="capco_admin.recent_contributions_resolver" class="Capco\AdminBundle\Resolver\RecentContributionsResolver">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="capco.toggle.manager" />
        </service>

        <service id="capco_admin.recent_reports_resolver" class="Capco\AdminBundle\Resolver\RecentReportingResolver">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="capco.toggle.manager" />
        </service>

        <service id="capco_admin.block.recent_contributions" class="Capco\AdminBundle\Block\RecentContributionsBlockService">
            <argument>capco_admin.block.recent_contributions</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="capco_admin.recent_contributions_resolver" />
            <tag name="sonata.block" />
        </service>

        <service id="capco_admin.block.help" class="Capco\AdminBundle\Block\HelpBlockService">
            <argument>capco_admin.block.help</argument>
            <argument type="service" id="templating" />
            <tag name="sonata.block" />
        </service>

        <service id="capco.admin.vars_extension" class="Capco\AdminBundle\Twig\VarsExtension">
            <tag name="twig.extension" />
        </service>

    </services>
</container>
