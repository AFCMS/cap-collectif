{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="sonata-news-block-recent-post box">
        {% if settings.title %}
            <div class="box-header">
                <h3 class="sonata-news-block-recent-post box-title"><i class="fa fa-pencil"></i> {{ settings.title|trans({}, 'CapcoAppBundle') }}</h3>
            </div>
        {% endif %}

        <div class="box-body">
            <div class="sonata-blog-post-container list-group">
                {% for post in posts %}
                    <a class="list-group-item" href="{{ url('capco_admin_edit_post', { 'postId': post.id }) }}">
                        {% if post.isPublic %}
                            <span class="label label-success">{{ 'global.published'|trans({}, 'CapcoAppBundle') }}</span>
                        {% else %}
                            <span class="label label-danger">{{ 'post_is_not_public'|trans({}, 'CapcoAppBundle') }}</span>
                        {% endif %}&nbsp;

                        {{ post.title|trans({}, 'CapcoAppBundle') }} - {{ post.publishedAt | format_date }}</a>
                {% else %}
                    <a class="list-group-item" href="#">{{ 'no_post_found'|trans({}, 'CapcoAppBundle') }}</a>
                {% endfor %}
            </div>

            <a href="/admin-next/posts" class="btn btn-primary btn-block"><i class="fa fa-list"></i> {{ 'view_all_posts'|trans({}, 'CapcoAppBundle') }}</a>
        </div>
    </div>
{% endblock %}
