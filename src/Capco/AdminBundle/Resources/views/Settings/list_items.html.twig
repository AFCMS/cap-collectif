{% set items = [] %}

{% if group.label == 'admin.group.pages' %}
    {%  set items = get_enabled_pages_categories() %}
{% elseif group.label == 'admin.group.parameters' %}
    {%  set items = get_enabled_settings_categories() %}
{% endif %}

{% if items | length > 0 %}
    {% for item in items %}
        {% set label = 'admin.label.' ~ item %}
        <li {% if category is defined and category == item %} class="active"{% endif %} ><a href="{{ path('capco_admin_settings', {'category': item }) }}"><i class="fa fa-angle-double-right"></i> {{ label |trans({}, 'SonataAdminBundle') }}</a></li>
    {% endfor %}
{% endif %}
