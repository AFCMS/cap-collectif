{% extends "@CapcoMail/notifyEventLayout.html.twig" %}
{% block email_body %}
            <div>
                <div class="resp-punchline" style="color:#666; text-decoration:none; font-size:20px; font-family:helvetica, arial, sans-serif; text-align:left;">
                    <p style="font-weight: bold">
                        {{ 'hello-username'|trans({'{username}': username,}, 'CapcoAppBundle', user_locale) | raw }}
                    </p>
                    <p>
                        {% if eventStatus == constant('Capco\\AppBundle\\DBAL\\Enum\\EventReviewStatusType::REFUSED') %}
                            {{ 'event-refused-by-admin'|trans({'{eventTitle}': eventTitle}, 'CapcoAppBundle', user_locale) | raw }}
                        {% else %}
                            {{ 'your-event-has-been-approved-by-administrator'|trans({'{eventTitle}': eventTitle}, 'CapcoAppBundle', user_locale) | raw }}
                        {% endif %}
                    </p>
                    {% if eventStatus == constant('Capco\\AppBundle\\DBAL\\Enum\\EventReviewStatusType::REFUSED') %}
                        <span style="color: rgb(51, 51, 51);font-family: OpenSans-Semibold;font-size: 16px;font-weight: 600;">
                            {{ 'proposal.show.trashed.reason'|trans({}, 'CapcoAppBundle', user_locale) | raw }}
                        </span>
                            <span style="color: rgb(112, 112, 112);font-family: OpenSans;font-size: 16px;">{{ eventRefusedReason|trans({}, 'CapcoAppBundle', user_locale) | raw }}
                        </span>
                        {% if eventComment %}
                            <p style="background: rgb(255, 243, 205);border-radius: 4px;border: 1px solid rgb(255, 238, 186);color: rgb(134, 100, 4);font-family: OpenSans;font-size: 16px;padding: 20px;margin-bottom: 15px ">
                                {{ eventComment }}
                            </p>
                        {% endif %}
                    {% endif %}
                    <p>
                        <a style="background-color: #3b88fd; border-radius: 5px;color: #fff;padding: 8px 18px;font-size: 14px;" href="{{ eventUrl }}" target="_blank" rel="noopener">
                            {{ 'link_action_show'|trans({}, 'CapcoAppBundle', user_locale) | raw }}
                        </a>
                    </p>
                    {% if eventStatus == constant('Capco\\AppBundle\\DBAL\\Enum\\EventReviewStatusType::REFUSED') %}
                        {{ 'for-more-information-contact-the-administrator'|trans({'{notificationEmail}': adminEmail }, 'CapcoAppBundle', user_locale) | raw }}
                    {% endif %}
                </div>
            </div>
{% endblock %}
