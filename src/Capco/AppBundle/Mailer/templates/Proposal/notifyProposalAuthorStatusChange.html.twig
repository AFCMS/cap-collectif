{% extends "@CapcoMail/notifyLayout.html.twig" %}

{% block email_body %}
    <div>
        <div class="resp-punchline"
             style="padding: 10px 27px 30px 27px;text-decoration:none; text-align:left;color: rgb(51, 51, 51);font-size: 18px;font-family: 'OpenSans-SemiBold',helvetica,arial,sans-serif;font-weight: 600;">
            <p>
                {{ 'your-contribution-status-change'|trans({'{proposalName}': proposalTitle, '{proposalStatus}': proposalStatus, '{date}':proposalDate, '{time}': time}, 'CapcoAppBundle', user_locale) | raw }}
            </p>
            <a style="background-color: #3b88fd; border-radius: 5px; color: rgb(255, 255, 255); font-family: 'OpenSans-Regular',helvetica,arial,sans-serif; font-weight: normal; padding: 5px 9px; font-size: 14px;"
               href="{{ proposalUrl }}" target="_blank" rel="noopener">
                {{ 'link_action_show'|trans({}, 'CapcoAppBundle', user_locale) | raw }}
            </a>
        </div>
    </div>
{% endblock %}
