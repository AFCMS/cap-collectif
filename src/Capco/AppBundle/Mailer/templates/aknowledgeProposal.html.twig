{% extends "@CapcoMail/standardLayout.html.twig" %}

{% set proposalDate =  sendAt|localizeddate('long', 'none', 'fr_FR', timezone)  %}
{% set proposalHour =  sendAt|date('H', timezone) ~ 'h' ~ sendAt|date('i', timezone) %}
{% set siteName = capco_site_parameter_value('global.site.fullname') %}

{% block html_title %}
    {{ 'acknowledgment-of-receipt'|trans({},'CapcoAppBundle') }}
{% endblock %}

{% block header_mail %}
    <tr>
        <td class="resp-full-td" valign="top" style="margin:0 20px; text-align:center;">
            <a class="resp-punchline" href="#" style="color:#337ab7; outline:none; text-decoration:none; font-size:20px; font-family:'Open Sans', helvetica, arial, sans-serif;">
                {{ siteName }}
            </a>
            <h1 class="resp-punchline" style="color:#000000; outline:none; font-size:22px; text-decoration:none; font-family:'Open Sans', helvetica, arial, sans-serif; font-weight:500;">
                {{ 'acknowledgment-of-receipt'|trans({},'CapcoAppBundle') }}
            </h1>
            <span class="resp-punchline" style="color:#999999; outline:none; font-size:20px; text-decoration:none; font-family:'Open Sans', helvetica, arial, sans-serif;">
                {{ proposalDate }}
            </span>
        </td>
    </tr>
{% endblock %}

{% block core_mail %}
    <span style="color:#000;font-weight: bold">{{ 'hello-username'|trans({'{username}': username}, 'CapcoAppBundle')|raw }}</span>
        {{ 'thank-you-for-participating-in-the-project'|trans({'{projectTitle}': projectTitle, '{projectLink}': projectLink},'CapcoAppBundle')|raw }}
    <span style="color:#000;">
        {% if typeOfMail == 'create' %}
            {{ 'your-proposal-has-been-registered'|trans({'{proposalTitle}': proposalName,'{proposalLink}': proposalLink},'CapcoAppBundle')|raw }}
            {{ 'on-date-at-time'|trans({'{date}':proposalDate, '{heure}': proposalHour},'CapcoAppBundle')|raw }}.
        {% else %}
            {{ 'you-have-modified-your-proposal'|trans({
                '{proposalTitle}': proposalName,
                '{proposalLink}': proposalLink,
                '{proposalChangeDate}': proposalDate,
                '{proposalChangeTime}' : proposalHour
            },'CapcoAppBundle')|raw }}
        {% endif %}
    </span>
    <p style="color:#000;">
        {{ 'you-can-modify-or-delete-your-proposal'|trans({'{modifier}':proposalLink, '{supprimer}': proposalLink},'CapcoAppBundle') }}
        {{ ' ' ~ 'until-date'|trans({'{date}':endAt|localizeddate('long', 'none', 'fr_FR', timezone)},'CapcoAppBundle') }}.
    </p>
{% endblock %}

{% block footer_mail %}
    <span style="font-size:13px; font-family:'Open Sans', helvetica, arial, sans-serif; color:#999999">
        {{ 'notification.email.external_footer'|trans({'{to}': to, '{sitename}': siteName, '{business}': business, '{siteUrl}': homepageUrl, '{businessUrl}': businessUrl}, 'CapcoAppBundle') | raw }}
    </span>
{% endblock %}
