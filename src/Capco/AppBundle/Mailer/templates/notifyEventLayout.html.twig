{% extends "@CapcoMail/standardLayout.html.twig" %}

{% block html_title %}
    {{ 'acknowledgment-of-receipt'|trans({},'CapcoAppBundle') }}
{% endblock %}

{% set logo = app_logo_url() %}

{% block core_mail %}
    <div style="height: 35px; margin-bottom: 10px;">
        {% if logo is not null %}
            <img style="float: left;" src="{{ logo }}"/>
        {% else %}
            <img style="width: 30px; height: 30px; float: left;" src="{{ baseUrl ~ asset('apple-icon-76x76.png') }}"/>
        {% endif %}
        <h2 style="color: #666; float: left; margin: 12px 8px;">
            {{ siteName|raw }}
        </h2>
    </div>
    <tr>
        <td class="resp-full-td" valign="top"
            style="margin:0 20px;background-color: #FFFFFF;border-radius: 4px; padding: 20px; border: 1px solid #fff;box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.07);">
            <table style="width: 100%;">
                <tr style="width: 100%;">
                    {% include '@CapcoMail/eventTitleLayout.html.twig' %}
                </tr>
            </table>
            {% block email_body %}
            {% endblock %}
        </td>
    </tr>
{% endblock %}

{% block footer_mail %}
    {% include '@CapcoMail/footerLayout.html.twig' %}
{% endblock %}
