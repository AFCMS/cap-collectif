<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Affichage du zoom avant pour les mobiles -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Active les media queries pour Windows Phone 8 -->
    <meta name="format-detection" content="telephone=no"> <!-- D√©sactive les liens bleus des num√©ros de t√©l√©phone sous iOS -->
    <title>Responsive & Flat - Un kit pour newsletters gratuit et libre</title>
    <style type="text/css" media="screen">

        .ExternalClass * {line-height:100%}
        .bb {
            border-bottom: 1px solid #d9d9d9;
            border-collapse: collapse;
        }

        .ba {
            border: 0.5px solid #d9d9d9;
            border-collapse: collapse;
        }
        .b-lrb {
            border-left: 0.5px solid #d9d9d9;
            border-right: 0.5px solid #d9d9d9;
            border-bottom: 0.5px solid #d9d9d9;
            border-collapse: collapse;
        }
        /* D√©but style responsive (via media queries) */

        @media only screen and (max-width:480px) {
            *[id=email-penrose-conteneur] {width:100% !important;}
            table[class=resp-full-table] {width:100% !important; clear:both;}
            td[class=resp-full-td] {width:100% !important; clear:both;}
            td[class=resp-full-td-center] {width:100%!important; clear:both; text-align: center !important;}
            img[class=email-penrose-img-header] {width:100% !important; max-width:340px !important;}
            a[class=resp-punchline] {font-size:50px !important;}
            hr[class=resp-hr-center] {text-align: center !important; margin-left:auto !important; margin-right:auto !important;}
        }

        /* Fin style responsive */

    </style>
</head>
<body>
<div align="center" style="">
    {% set activitiesDate =  sendAt|localizeddate('long', 'none', 'fr_FR', timezone)  %}
    {% set siteName = capco_site_parameter_value('global.site.fullname') %}
    <table id="email-penrose-conteneur" width="660" align="center" style="margin: 20px; background-color:#ffffff;" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td>
                <table width="660" class="resp-full-table" align="center" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td class="resp-full-td" valign="top" style="margin:0 20px; text-align:center;">
                            <a class="resp-punchline" href="#" style="color:#337ab7; outline:none; text-decoration:none; font-size:20px; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">{{ siteName }}
                            </a>
                            <h1 class="resp-punchline" style="color:#000000; outline:none; text-decoration:none; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">  {{ 'summary-of-activities'|trans({},'CapcoAppBundle') }}
                            </h1>
                            <span class="resp-punchline" style="color:#999999; outline:none; font-size:12px; text-decoration:none; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">
								{{ activitiesDate }}
							</span>
                        </td>
                    </tr>
                    <tr style="margin-top: 20px">
                        <td class="resp-full-td-center" valign="top" style="padding-top:50px; padding-left: 10px">
                            <b>{{ 'hello-username'|trans({'{username}': username}, 'CapcoAppBundle') }}</b><br>
                            {{ 'activity-summary-introduction'|trans({'{siteName}': siteName, '{activitiesDate}': activitiesDate}, 'CapcoAppBundle') }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        {% for currentProjectId, project in userProjectsActivities %}
            <tr style="margin-top: 20px">
                <td class="" style="padding-top: 50px">
                    <table width="660" class="resp-full-table" align="center" border="0" cellspacing="0" cellpadding="0" style="">
                        <tr>
                            <td width="660">
                                <table width="100%" align="left" class="resp-full-table ba" border="0" cellpadding="0" cellspacing="0" style="border-color: #d9d9d9; margin-top: 0px;">
                                    <tr>
                                        <td class="resp-full-td-center" valign="top" style="padding:20px; text-align:center;background-color: #f3f3f3;">
                                            <span class="resp-punchline" style="color:#999999; outline:none; font-size:14px; text-decoration:bold; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;"> {{ 'admin.fields.highlighted_content.project'|trans({},'CapcoAppBundle') }}</span>
                                            <h2 class="resp-punchline" style="color:#337ab7; outline:none; text-decoration:none; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">{{ project.projectTitle }}</h2>
                                            <h3 class="resp-punchline" style="color:#6aa84f; outline:none; text-decoration:none; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">{{ 'new-activity'|trans({'{num}': 5}, 'CapcoAppBundle') }}</h3>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            {% for proposal in project.proposals %}
                <tr style="border-bottom: 1px solid #e2e8ea">
                    <td class="b-lrb">
                        <table width="660" class="resp-full-table" align="left" border="0" cellspacing="0" cellpadding="0" style="padding:20px;">
                            <tr>
                                <td width="660">
                                    <table width="100%" align="center" class="resp-full-table" border="0" cellpadding="0" cellspacing="0" >
                                        <tr>
                                            <td class="resp-full-td" valign="top" style="margin:20px 0; text-align:left;">
                                                <span class="resp-punchline" style="color:#999999; outline:none; font-size:14px; text-decoration:bold; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">{{ 'admin.fields.source.opinion'|trans({}, 'CapcoAppBundle') }}</span>
                                                <ul style="list-style: none; padding:0px">
                                                    <a href="{{ proposal.link }}"><h4 class="resp-punchline" style="color:#337ab7; outline:none; text-decoration:none; font-family:'Helvetica Neue', helvetica, arial, sans-serif; font-weight:100;">{{ proposal.title }}</h4></a>
                                                    {% if proposal.isUpdated %}
                                                        <li>Proposition mise √† jour</li>
                                                    {% endif %}
                                                    {% if proposal.isDeleted %}
                                                        <li>Proposition supprim√©e</li>
                                                    {% endif %}
                                                    {% if proposal.votes > 0 %}
                                                        <li>üó≥<b>{{ proposal.votes }}</b> nouveaux votes</li>
                                                    {% endif %}
                                                    {% if proposal.comments > 0 %}
                                                        <li>üí¨<b>{{ proposal.comments }}</b> nouveaux commentaires</li>
                                                    {% endif %}
                                                    {% if proposal.lastStep %}
                                                        <li>‚úîÔ∏è Est pass√© √† l'√©tape <b>{{proposal.lastStep.titleStep }}</b> avec le status <b>{{ proposal.lastStep.sName}}</b></li>
                                                    {% endif %}
                                                </ul>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        {% endfor %}
    </table>
    <table id="email-penrose-conteneur" width="600" align="center" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td style="margin:20px 0px;">
                <table width="600" class="resp-full-table" align="center" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="100%" class="resp-full-td" style="text-align: center;">
                            <span>{{ 'you-receive-this-email-because'|trans({}, 'CapcoAppBundle') }}</span>
                            <span>{{ 'you-follow-these-proposals'|trans({}, 'CapcoAppBundle') }}</span><br>
                            <span><a href="">{{ 'set-up-my-subscriptions'|trans({}, 'CapcoAppBundle') }}</a></span>
                            <hr align="left" style="margin-left:0px; text-align:left; background-color:#aeb2b3; color:#aeb2b3; height: 1px; border: 0 none;" />
                            <span style="font-size:12px; font-family:'Helvetica Neue', helvetica, arial, sans-serif; color:#aeb2b3">{{ 'notification.email.moderator_footer'|trans({}, 'CapcoAppBundle') }}</span>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
</body>
</html>
