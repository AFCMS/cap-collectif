{% extends "@CapcoMail/standardLayout.html.twig" %}

{% block html_title %}
    {{ 'acknowledgement-of-receipt'|trans({},'CapcoAppBundle') }}
{% endblock %}

{% set logo = app_logo_url() %}

{% block core_mail %}
    <div style="height: 35px; margin-bottom: 20px;">
        {% if logo is not null %}
            <img style="float: left;" src="{{ logo }}"/>
        {% else %}
            <img style="width: 30px; height: 30px; float: left;" src="{{ baseUrl ~ asset('apple-icon-76x76.png') }}"/>
        {% endif %}
        <h2 style="color: #666; float: left; margin: 12px 8px;">
            {{ siteName|raw }}
        </h2>
    </div>
    <tr>
        <td class="resp-full-td" valign="top"
            style="box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.07); margin:0 20px; background-color: #ffffff; border: 1px solid #ccc;  border-radius: 4px;">
            <table style="width: 100%; {{ tableStyle }}">
                <tr style="width: 100%;">
                    {% include(titleLayout) %}
                </tr>
            </table>
            {% block email_body %}
            {% endblock %}
        </td>
    </tr>
{% endblock %}

{% block footer_mail %}
    {% include '@CapcoMail/footerLayout.html.twig' %}
{% endblock %}
