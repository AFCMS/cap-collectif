{% block body_text %}
    {% autoescape false %}
    <p>
        {{ 'hello-username'|trans({
            '{username}' : username
        }) }}
    </p>
    <p>
        {{ 'you-have-not-yet-confirmed-your-email-address-on-the-site'|trans({
            '{emailAddress}': emailAddress,
            '{siteName}': siteName
        }) }}
    </p>
    <p>
        {{ 'user.register.confirmation_message.please_validate'|trans }}
    </p>
    <p>
        <a href="{{ confirmationUrl }}"><strong>{{ 'user.register.confirmation_message.validate'|trans }}</strong></a>
    </p>
    {% endautoescape %}
{% endblock %}
{% block body_html %}{% endblock %}