{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  block--shadowed">
                    <div class="dialog__header  box">
                        <h4 class="h4  dialog__title">{{ 'argument.update.title'|trans({}, 'CapcoAppBundle') }}</h4>
                    </div>
                    <div class="dialog__excerpt  excerpt  box">
                        <p>{{ 'argument.update.alert'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% if argument.Author and argument.Author.Media %}
                                    <a class="pull-left" href="{{ path('capco_user_profile_show_all', {'username': argument.Author}) }}">
                                        {% thumbnail argument.Author.Media, 'avatar' with {'title': argument.Author.username, 'alt': argument.Author.username, 'class': 'media-object img-circle'} %}
                                    </a>
                                {% endif %}
                                <div class="media-body">
                                    {{form_widget(form.body)}}
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <a href="{{ path('app_consultation_delete_argument' ,{'consultationSlug': consultation.slug, 'opinionTypeSlug':opinionType.slug, 'opinionSlug': opinion.slug, 'argumentId': argument.id } ) }}" class="btn  btn-danger">{{ 'argument.update.remove'|trans({}, 'CapcoAppBundle') }}</a>
                            <div class="pull-right">
                                <a href="{{ path('app_consultation_show_opinion', {'consultationSlug': consultation.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug}) }}" class="btn  btn-default">{{ 'argument.update.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-warning">{{ 'argument.update.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
