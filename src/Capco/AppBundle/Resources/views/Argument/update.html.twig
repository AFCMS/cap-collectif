{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  block--shadowed">
                    <div class="dialog__header  box">
                        <h4 class="h4  dialog__title">{{ 'argument.update.title_block'|trans({}, 'CapcoAppBundle') }}</h4>
                    </div>
                    <div class="dialog__excerpt  excerpt  box">
                        <p>{{ 'argument.update.text_alert'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% if argument.Author and argument.Author.Media %}
                                    <a class="pull-left" href="#">
                                        {% thumbnail argument.Author.Media, 'avatar' with {'title': argument.Author.fullname, 'alt': argument.Author.fullname, 'class': 'media-object img-circle'} %}
                                    </a>
                                {% endif %}
                                <div class="media-body">
                                    {{form_widget(form.body)}}
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <a href="{{ path('app_consultation_delete_argument' ,{'consultation_slug': consultation.slug, 'opinion_type_slug':opinionType.slug, 'opinion_slug': opinion.slug, 'argument_id': argument.id } ) }}" class="btn  btn-danger">{{ 'argument.update.remove_button'|trans({}, 'CapcoAppBundle') }}</a>
                            <div class="pull-right">
                                <a href="{{ path('app_consultation_show_opinion', {'consultation_slug': consultation.slug, 'opinion_type_slug': opinionType.slug, 'opinion_slug': opinion.slug}) }}" class="btn  btn-default">{{ 'argument.update.reset_submit'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-warning">{{ 'argument.update.edit_submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">
        $(window).on('load', function() {
            App.module.ckEditor('ckeditor');
        });
    </script>
{% endblock %}
