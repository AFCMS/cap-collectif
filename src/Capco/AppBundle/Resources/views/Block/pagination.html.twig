{% macro link(p, route, params, pageName) %}
    {%  set pm = params | merge( { (pageName): p } ) %}
    {{ path(route, pm) }}
{% endmacro %}
{% import _self as render %}

{% if pageName is not defined %}
    {% set pageName = 'page' %}
{% endif %}

{% if nb > 1 %}
    <div class="pagination--custom  text-center">
        <ul class="pagination">
            <li {% if current <= 1 %} class="disabled"{% endif %}>
                <a {% if current > 1 %} href="{{ render.link(1, route, params, pageName) }}"{% endif %} aria-label="{{ 'global.pagination.first' | trans({}, 'CapcoAppBundle') }}">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li {% if current <= 1 %} class="disabled"{% endif %}>
                <a {% if current > 1 %} href="{{ render.link(current-1, route, params, pageName) }}"{% endif %} aria-label="{{ 'global.pagination.previous' | trans({}, 'CapcoAppBundle') }}">
                    <span aria-hidden="true">&lsaquo;</span>
                </a>
            </li>
            {% set down = max(current-2, 1) %}
            {% set up = min(current+2, nb) %}
            {% for p in range(down, up) %}
                <li{% if p == current %} class="active"{% endif %}>
                    <a href="{{ render.link(p, route, params, pageName) }}" aria-label="{{ 'global.pagination.page' | trans({'%page%': p}, 'CapcoAppBundle') }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li {% if current >= nb %} class="disabled"{% endif %}>
                {% set p = current+1 %}
                <a {% if current < nb %} href="{{ render.link(current+1, route, params, pageName) }}"{% endif %} aria-label="{{ 'global.pagination.next' | trans({}, 'CapcoAppBundle') }}">
                    <span aria-hidden="true">&rsaquo;</span>
                </a>
            </li>
            <li {% if current >= nb %} class="disabled"{% endif %}>
                {% set p = nb %}
                <a {% if current < nb %} href="{{ render.link(nb, route, params, pageName) }}"{% endif %} aria-label="{{ 'global.pagination.last' | trans({}, 'CapcoAppBundle') }}">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </div>
{% endif %}
