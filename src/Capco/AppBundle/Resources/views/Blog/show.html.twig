{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1 text-center">
        <div class="container">
            <h1>{{ capco_site_parameter_value('blog.jumbotron.title')}}</h1>
            {% set jumbotron_body = capco_site_parameter_value('blog.jumbotron.body') %}
            {% if null != jumbotron_body %}
                {{ jumbotron_body|raw }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <h1><a href="{{ url('app_blog_show', {'slug': post.slug}) }}">{{ post.title | jolitypo() }}</a></h1>
        {% include 'CapcoAppBundle:Blog:_authors.html.twig' with {'authors': post.Authors, 'publishedAt': post.publishedAt} %}

        {%  if post.Media %}
            {% thumbnail post.Media, 'blockHeader' with {'title': post.Media.name, 'alt': post.Media.name, 'class': 'img-responsive'} %}
        {%  endif %}

        {{ post.body|raw | jolitypo() }}

        {% if capco_site_parameter_value('blog.disqus.username') %}
            {% include 'CapcoAppBundle:Blog:_comments.html.twig' with {'post': post} %}
        {% endif %}
    </div>
{% endblock %}

