{% set user = app.user %}
<hr/>
<div class="opinion  opinion--comment  opinion--add-comment">
    <div class="opinion__body">
        <h2 class="h4">{{ 'comment.create.title'|trans({}, 'CapcoAppBundle') }}</h2>
        <div class="media">
            {% if user != null %}
                {% set avatar = app.user.Media|capco_default_avatar %}
                {% if avatar != null %}
                    <a class="pull-left" href="{{ path('capco_user_profile_show_all', {'slug': user.slug}) }}">
                        {% thumbnail avatar, 'avatar' with {'title': user.username, 'alt': user.username, 'class': 'media-object img-circle'} %}
                    </a>
                {% else %}
                    <a class="pull-left" href="{{ path('capco_user_profile_show_all', {'slug': user.slug}) }}">
                        <svg version="1.1" id="Calque_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="45px" height="45px" viewBox="0 0 200 200" enable-background="new 0 0 200 200" xml:space="preserve"><circle fill="{{ capco_site_color_value('color.section.bg')  }}" cx="100" cy="100" r="97.617"/><g><path fill="none" stroke="#FFFFFF" stroke-width="3" stroke-linejoin="round" stroke-miterlimit="10" d="M100,160.011h68.011c0,0,0-12.163-5.916-23.993c-4.41-8.819-22.024-14.039-45.683-22.908V95.367c0,0,7.239-6.661,7.239-18.49c2.959,0,5.916-11.826,0-14.785c0-1.754,7.927-16.569,5.916-26.613c-2.957-14.786-44.353-14.786-47.309-2.955c-17.742,0-5.915,27.169-5.915,29.568c-5.913,2.959-2.957,14.785,0,14.785c0,11.829,7.238,17.473,7.238,17.473v18.759c-23.655,8.875-41.273,14.089-45.682,22.908c-5.911,11.83-5.911,23.993-5.911,23.993H100z"/></g></svg>
                    </a>
                {% endif %}
                <div class="media-body">
                    <p class="media--aligned  excerpt"><a href="{{ path('capco_user_profile_show_all', {'slug': user.slug}) }}">{{ user.username }}</a></p>
                </div>
            {% endif %}
        </div>
        <div class="opinion__data">
            <form method="post" action="{{ path('app_comment_create', {'objectType': object.className, 'objectId': object.id}) }}" {{ form_enctype(form) }} >
                {% if null == user %}
                    <p class="excerpt">{{ 'comment.create.all_fields_mandatory'|trans({}, 'CapcoAppBundle') }}</p>
                    <div class="row">
                        <div class="col-sm-12  col-md-6">
                            <div class="form-group">
                                <label for="commentName" class="control-label  h5" style="width:100%;">
                                    {{ 'comment.create.name_label'|trans({}, 'CapcoAppBundle') }}
                                    <span class="pull-right"><a href="{{ path('app_comment_login', {'objectType': object.className, 'objectId': object.id}) }}">{{ 'comment.create.with_account'|trans({}, 'CapcoAppBundle') }}</a></span>
                                </label>
                                {{ form_widget(form.authorName, {'id': 'commentName'}) }}
                            </div>
                            <div class="form-group">
                                <label for="commentEmail" class="control-label  h5">{{ 'comment.create.email_label'|trans({}, 'CapcoAppBundle') }}</label>
                                {{ form_widget(form.authorEmail, {'id': 'commentEmail'}) }}
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="commentInput" class="control-label  h5">{{ 'comment.create.input_label'|trans({}, 'CapcoAppBundle') }}</label>
                    {{ form_widget(form.body, {'id': 'commentInput', 'attr': {'rows': 8} }) }}
                    {{ form_rest(form) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn  btn-primary">{{ 'comment.create.submit'|trans({}, 'CapcoAppBundle') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
