{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_comment_delete', {'commentId': comment.id}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ capco_comment_object(comment) }} - {{ 'comment.delete.page_title'|trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--light-gray  block--bordered">
                    <div class="dialog__header  box">
                        <h1 class="h4  dialog__title">{{ 'comment.delete.title'|trans({}, 'CapcoAppBundle') }}</h1>
                    </div>

                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                    <p class="h4">{{ 'comment.delete.subtitle'|trans({}, 'CapcoAppBundle') }}</p>
                                    <div>
                                        {{ 'comment.delete.text'|trans({}, 'CapcoAppBundle') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-right">
                                <a href="{{ capco_comment_object_url(comment) }}" class="btn  btn-default">{{ 'comment.delete.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-danger">{{ 'comment.delete.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
