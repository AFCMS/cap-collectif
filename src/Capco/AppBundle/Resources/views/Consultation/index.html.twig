{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_consultation') }}{% endblock %}

{% set jumbotron_title = capco_site_parameter_value('consultations.jumbotron.title') %}
{% block title %}
    {% if null != jumbotron_title %}
        {{ parent() }} - {{ jumbotron_title }}
    {% else %}
        {{ parent() }} - {{ 'consultation.title'|trans({}, 'CapcoAppBundle') }}
    {% endif %}
{% endblock %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1 text-center">
        <div class="container">
            {% if null != jumbotron_title %}
                <h1>{{ jumbotron_title }}</h1>
            {% else %}
                <h1>{{ 'consultation.title'|trans({}, 'CapcoAppBundle') }}</h1>
            {% endif %}
            {% set jumbotron_body = capco_site_parameter_value('consultations.jumbotron.body') %}
            {% if null != jumbotron_body %}
                {{ jumbotron_body|raw }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="container  container--custom">
        {% set content_body = capco_site_parameter_value('consultations.content.body') %}
        {% if null != content_body %}
            {{ content_body|raw }}
        {% endif %}
    </div>

    <div class="container  container--custom">

        {% if is_feature_enabled('consultations_form') and form is defined %}
        <div class="filter  block">
            <div class="row">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {% if is_feature_enabled('themes') %}
                    <div class="col-xs-12  col-sm-3  col-md-4  col-lg-4 filter__down">
                        {{ form_label(form.theme, null, {'label_attr':{"class":"control-label  sr-only"} }) }}
                        {{ form_errors(form.theme) }}
                        {{ form_widget(form.theme, {'attr':{"class":"form-control"} }) }}
                    </div>
                {% endif %}
                <div class="col-xs-12  col-sm-3  col-md-4  col-lg-4 filter__down">
                    <div class="formgroup--inline">
                        {{ form_label(form.sort, null, {'label_attr':{"class":"control-label"} }) }}
                        <span class="formgroup--inline__control">
                                {{ form_errors(form.sort) }}
                            {{ form_widget(form.sort, {'attr':{"class":"form-control"} }) }}
                            </span>
                    </div>
                </div>
                <div class="col-xs-12  col-sm-4  col-md-3  col-lg-4 filter__down">
                    {{ form_label(form.term, null, {'label_attr':{"class":"control-label sr-only"} }) }}
                    <div class="input-group  filter__search">
                        {{ form_errors(form.term) }}
                        {{ form_widget(form.term, {'attr':{"class":"form-control", "placeholder": 'consultation.searchform.search'|trans({}, 'CapcoAppBundle')} }) }}
                        <span class="input-group-btn">
                                <button type="submit" class="btn  btn-default"> <i class="cap cap-magnifier"></i><span class="sr-only">{{ 'consultation.searchform.search'|trans({}, 'CapcoAppBundle') }}</span></button>
                            </span>
                    </div>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
        {% endif %}

        <div class="row">
            {% if consultations|length > 0 %}
                {% for consultation in consultations %}
                    {% include '@CapcoApp/Consultation/blockConsultation.html.twig' with {'consultation': consultation} only %}
                {% endfor %}
            {% else %}
                <p>
                    {{ 'consultation.searchform.no_result'|trans({}, 'CapcoAppBundle') }}
                </p>
            {% endif %}
        </div>

        {% set route, params = 'app_consultation', {} %}
        {% if is_feature_enabled('consultations_form') and form is defined %}
            {% set theme = (form.vars.data.theme is null ? 'all' : form.vars.data.theme) %}

            {% if form.vars.data.sort is not null or theme != 'all' %}
                {% if form.vars.data.term is not null %}
                    {% set route, params = 'app_consultation_search_term', {'sort': form.vars.data.sort, 'theme': theme, 'term': form.vars.data.term } %}
                {% else %}
                    {% set route, params = 'app_consultation_search', {'sort': form.vars.data.sort, 'theme': theme } %}
                {% endif %}
            {% endif %}
        {% endif %}

        {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPage, 'route': route, 'params': params} only  %}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).on('load', function() {
            App.equalheight('.thumbnail--custom');
        });
        $(window).on('resize', function() {
            App.resized('.thumbnail--custom');
        });
    </script>
{% endblock %}
