{% extends '@CapcoApp/Consultation/show.html.twig' %}

{% block canonical_link %}{{ url('app_consultation_show_opinions', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug}) }}{% endblock %}

{% block opinions_list %}

    {% if currentStep.allowedTypes | length == 1 and currentStep.body is not null %}
        <div class="block  block--bordered">
            <div class="opinion  opinion--current  opinion--default">
                <div class="opinion__header  opinion__header--mobile-centered">
                    <h2 class="pull-left  h4  opinion__header__title"> {{ 'consultation.show.meta.intro.title' | trans({}, 'CapcoAppBundle') }}</h2>
                </div>
                <div class="box">
                    <p class="more">{{ currentStep.body|striptags }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="block  block--bordered">
        <div class="opinion  opinion--{{ opinionType.color }} opinion--default">
            <div class="opinion__header  opinion__header--mobile-centered">
                <h2 class="h4  opinion__header__title  pull-left">{{ opinionType.title }} <span class="badge">{{ opinions|length }}</span></h2>
                <div class="pull-right  opinion__header__filter">
                    {{ form_start(sortOpinionsForm) }}
                    {{ form_label(sortOpinionsForm.opinionsSort, null, {'label_attr':{"class":"control-label  sr-only"} }) }}
                    {{ form_widget(sortOpinionsForm.opinionsSort, {'attr':{"class":"form-control", 'onchange': 'this.form.submit()'} }) }}
                    {{ form_end(sortOpinionsForm) }}
                    {% if opinionType.isEnabled == true and currentStep.canContribute %}
                        <a href="{{ path('app_consultation_new_opinion' ,{'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug } ) }}" class="btn  btn-default">
                            <i class="cap cap-add-1"></i>
                            <span class="hidden-xs">{{ 'opinion.create.button'|trans({}, 'CapcoAppBundle') }}</span>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if(opinions|length > 0) %}
        <ul class="media-list  opinion__list">
            {% for opinion in opinions %}
                {% include 'CapcoAppBundle:Opinion:blockOpinion.html.twig' with {'opinion': opinion, 'opinionType': opinionType} only %}
            {% endfor %}
            </ul>
        {% else %}
            <div class="consultation__empty-block  text-center">
                <p class="icon  cap-bubble-attention-6"></p>
                <p>{{ 'opinion.show.none'|trans({}, 'CapcoAppBundle') }}</p>
            </div>
        {% endif %}
    </div>

    {% if sortOpinionsForm.vars.data.opinionsSort is not null %}
        {% set route, params = 'app_consultation_show_opinions_sorted', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug, 'opinionsSort': sortOpinionsForm.vars.data.opinionsSort } %}
    {% else %}
        {% set route, params = 'app_consultation_show_opinions', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug} %}
    {% endif %}

    {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPage, 'route': route, 'params': params} only  %}
{% endblock %}
