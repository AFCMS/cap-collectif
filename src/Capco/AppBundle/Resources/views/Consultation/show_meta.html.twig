        <p class="excerpt">Th√®me(s)</p>
        <p>
            {% for theme in consultation.Themes %}
                <a href="{{ path('app_theme_show', {'slug': theme.slug}) }}">{{theme}}</a> {% if loop.last == false %} , {% endif %}
            {% endfor %}
        </p>
        <p class="excerpt">Publication</p>
        <p>{{ consultation.openedAt | localizeddate('long', 'none') }}</p>
        <p class="excerpt">Contributions</p>
        <p>
            {{ consultation.opinionCount + consultation.trashedOpinionCount }} propositions<br/>
            {{ consultation.argumentCount + consultation.trashedArgumentCount }} arguments
        </p>
