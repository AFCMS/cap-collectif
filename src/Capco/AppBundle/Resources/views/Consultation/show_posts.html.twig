{% extends '@CapcoApp/Consultation/show.html.twig' %}

{% block canonical_link %}{{ url('app_consultation_show_posts', {'consultationSlug': consultation.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'consultation.show.posts.title' | trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Consultation/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12  col-sm-4  col-md-3">
                {{ render(controller('CapcoAppBundle:Consultation:showMeta', {'consultationSlug': consultation.slug, 'currentStepSlug': 'posts_step'})) }}
            </div>

            <div class="col-xs-12  col-sm-8  col-md-9" id="details">
                <div class="block  block--bordered  box">
                    <h2 class="h2">{{ 'consultation.show.posts.title' | trans({}, 'CapcoAppBundle') }} <span class="small excerpt">{{ posts | length }}</span></h2>
                    <ul class="media-list">
                        {% for post in posts %}
                            {% include '@CapcoApp/Blog/blockPost.html.twig' with {'post': post} only %}
                        {% endfor %}
                    </ul>
                </div>
            </div> <!-- col-xs-12  col-sm-8  col-md-9 -->
        </div> <!-- .row -->

        {% if nbPage > 1 %}
            <div class="pagination--custom  text-center">
                <ul class="pagination">
                    {% for p in range(1, nbPage) %}
                        <li{% if p == page %} class="active"{% endif %}>
                            <a href="{{ path('app_consultation_show_posts', {'consultationSlug': consultation.slug, 'page': p}) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

    </div>

{% endblock %}
