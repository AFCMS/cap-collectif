{% set h1 = capco_site_color_value('color.h1') %}
{% set h2 = capco_site_color_value('color.h2') %}
{% set h3 = capco_site_color_value('color.h3') %}
{% set h4 = capco_site_color_value('color.h4') %}
{% set h5 = capco_site_color_value('color.h5') %}
{% set h6 = capco_site_color_value('color.h6') %}

{% set bodyBg = capco_site_color_value('color.body.bg') %}
{% if null == bodyBg %}{% set bodyBg = '#EBEBEB' %}{% endif %}
{% set bodyText = capco_site_color_value('color.body.text') %}
{% if null == bodyText %}{% set bodyText = '#333' %}{% endif %}

{% set headerBg = capco_site_color_value('color.header.bg') %}
{% if null == headerBg %}{% set headerBg = '#16A085' %}{% endif %}
{% set headerTitle = capco_site_color_value('color.header.title') %}
{% if null == headerTitle %}{% set headerTitle = '#FFF' %}{% endif %}
{% set headerText = capco_site_color_value('color.header.text') %}
{% if null == headerText %}{% set headerText = '#FFF' %}{% endif %}

{% set sectionBg = capco_site_color_value('color.section.bg') %}
{% if null == sectionBg %}{% set sectionBg = '#1ABC9C' %}{% endif %}
{% set sectionText = capco_site_color_value('color.section.text') %}
{% if null == sectionText %}{% set sectionText = '#FFF' %}{% endif %}
{% set sectionTitle = capco_site_color_value('color.section.title') %}
{% if null == sectionTitle %}{% set sectionTitle = '#FFF' %}{% endif %}

{% set btn = capco_site_color_value('color.btn') %}
{% if null == btn %}{% set btn = '#1abc9c' %}{% endif %}
{% set btnText = capco_site_color_value('color.btn.text') %}
{% if null == btnText %}{% set btnText = '#FFF' %}{% endif %}

{% set btnPrimary = capco_site_color_value('color.btn.primary') %}
{% if null == btnPrimary %}{% set btnPrimary = '#1abc9c' %}{% endif %}
{% set btnPrimaryText = capco_site_color_value('color.btn.primary.text') %}
{% if null == btnPrimaryText %}{% set btnPrimaryText = '#FFF' %}{% endif %}

{% set link = capco_site_color_value('color.link') %}
{% if null == link %}{% set link = '#16a085' %}{% endif %}
{% set linkHover = capco_site_color_value('color.link.hover') %}
{% if null == linkHover %}{% set linkHover = '#1abc9c' %}{% endif %}

{% set footerText = capco_site_color_value('color.footer.text') %}
{% if null == footerText %}{% set footerText = '#FFF' %}{% endif %}
{% set footerBg = capco_site_color_value('color.footer.bg') %}
{% if null == footerBg %}{% set footerBg = '#1abc9c' %}{% endif %}


<style>

    a {
        color: {{ link }};
    }

    a:hover,
    a:focus,
    .opinion .opinion__body .opinion__title a:hover,
    .opinion .opinion__body .opinion__user a:hover {
        color: {{ link }};
    }

    .navbar--sub .nav li.active a,
    .navbar--sub .nav li.active:hover a {
        background-color: {{ btnPrimary }};
        border-color: {{ btnPrimary }};
        color: {{ btnPrimaryText }};
    }

    .pagination>.active > a,
    .pagination>.active > a:focus,
    .pagination>.active > a:hover,
    .pagination>.active > span,
    .pagination>.active > span:focus,
    .pagination>.active > span:hover {
        background-color: {{ btnPrimary }};
        border-color: {{ btnPrimary }};
        color: {{ btnPrimaryText }};
    }

    .dropdown-menu>.active > a,
    .dropdown-menu>.active > a:focus,
    .dropdown-menu>.active > a:hover {
        background-color: {{ btnPrimary }};
    }

    .profile .profile__value a:hover,
    .profile .profile__value.active a,
    .profile .profile__value.active a:hover {
        -moz-box-shadow: 0 -3px 0 {{ link }} inset;
        -webkit-box-shadow: 0 -3px 0 {{ link }} inset;
        box-shadow: 0 -3px 0 {{ link }} inset;
    }

    .settings__nav.nav-pills > li.active > a,
    .settings__nav.nav-pills > li.active > a:focus,
    .settings__nav.nav-pills > li.active > a:hover {
        color: {{ headerText }};
        background-color: {{ headerBg }};
    }

    .btn-primary.active,
    .btn-primary:active,
    .btn-primary:focus,
    .btn-primary:hover,
    .open > .btn-primary.dropdown-toggle {
        background-color: {{ btnPrimary }};
        border-color: {{ btnPrimary }};
        color: {{ btnPrimaryText }};
    }

    h1, .h1 { color: {{ h1 }};}
    h2, .h2 { color: {{ h2 }};}
    h3, .h3 { color: {{ h3 }};}
    h4, .h4 { color: {{ h4 }};}
    h5, .h5 { color: {{ h5 }};}
    h6, .h6 { color: {{ h6 }};}

    .main {
        background-color: {{ bodyBg }};
        color:{{ bodyText }};
    }
    .jumbotron--bg-1,
    .footer {
        background-color: {{ headerBg }};
        color: {{ headerText }};
    }
    .footer a,
    .footer a:hover,
    .footer a:focus,
    .footer .footer__body a,
    .footer .social-network li a {
        color: {{ footerText }};
    }

    .jumbotron--bg-1 h1{
        color: {{ headerTitle }};
    }

    .footer .footer__links h1,
    .footer .footer__links h2,
    .footer .footer__links h3,
    .footer .footer__links h4,
    .footer .footer__links h5,
    .footer .footer__links,
    .footer .footer__links ul li,
    .footer .footer__links ul li a,
    .footer .capco-powered a:hover {
        background-color: {{ footerBg }};
        color: {{ footerText }};
    }

    body {
        background-color: {{ sectionBg }};
    }
    .jumbotron--bg-2 {
        background-color: {{ sectionBg }};
        color: {{ sectionText }};
    }
    .jumbotron--bg-2 h1,
    .jumbotron--bg-2 h2,
    .jumbotron--bg-2 h3,
    .jumbotron--bg-2 h4,
    .jumbotron--bg-2 h5 {
        color: {{ sectionTitle }};
    }
    .jumbotron--bg-2 h2 {
        border-bottom-color: {{ sectionTitle }};
    }

    .btn--outline.btn-primary {
        color: {{ btnPrimary }};
        background-color: transparent;
        border-color: {{ btnPrimary }};
    }

    .btn--outline.btn-primary:hover {
        color: {{ btnPrimaryText }};
        background-color: {{ btnPrimary }};
        border-color: {{ btnPrimary }};
    }


    .btn-primary {
        color: {{ btnPrimaryText }};
        background-color: {{ btnPrimary }};
        border-color: {{ btnPrimary }};
    }

    .btn-primary:hover {
        color: {{ btnPrimary }};
        background-color: {{ btnPrimaryText }};
        border-color: {{ btnPrimary }};
    }

    .bg--consultation,
    .bg--theme {
        background-color: {{ sectionBg }};
    }

    .event .month {
        background-color: {{ headerBg }};
    }

    {% if null != capco_site_image_media('image.header') and app.request.attributes.get('_route') == 'app_homepage' %}
    .jumbotron--bg-1{
        background-image: url({% path capco_site_image_media('image.header'), 'header' %});
        background-position: 50% 50%;
        background-size: cover;
        padding: 0;
        margin: 0;
    }
        .header-img {
            padding: 0;
            margin: 0;
            padding-bottom: 30px;
            position: relative;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            padding-top: 30px;
            {% if true == capco_site_parameter_value('homepage.jumbotron.darken') %}
                background-color: rgb(0, 0, 0);
                background-color: rgba(0, 0, 0, 0.6);
                filter:progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000);
            {% endif %}
        }
    {% endif %}
</style>