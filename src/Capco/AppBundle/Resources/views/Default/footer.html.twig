<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12  col-sm-12  col-md-12  col-lg-12">
                <h4 class="h4">{{ capco_site_parameter_value('footer.text.title')}}</h4>
                <p>{{ capco_site_parameter_value('footer.text.body')}}</p>
            </div>

            <div class="col-xs-12  col-sm-12  col-md-10  col-md-offset-1  col-lg-8  col-lg-offset-2">
                <ul class="social-network">
                    {% for socialNetwork in socialNetworks %}
                        <li><a href="{{ socialNetwork.link }}"><span class="icon cap-{{ socialNetwork.style }}"></span><span class="hidden-xs"> {{ socialNetwork.title }}</span></a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="footer__links">
        <div class="container">
            <ul>
                {% for footerLink in footerLinks %}
                    <li> <a href="{{ footerLink.link }}">{{ footerLink.title }}</a>{% if not loop.last %} |{% endif %}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</footer>
