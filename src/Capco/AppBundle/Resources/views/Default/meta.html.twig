{% if title is defined and title is not empty %}
    <meta property="og:title" content="{{ title }}" />
    <meta name="twitter:title" content="{{ title }}" />
{% endif %}

{% set url = url|default(app.request.uri) %}
<meta property="og:url" content="{{ url }}" />
<meta name="twitter:url" content="{{ url }}" />

{% if description is defined and description is not empty %}
    <meta name="description" content="{{ description }}" />
    <meta property="og:description" content="{{ description }}" />
    <meta name="twitter:description" content="{{ description }}" />
{% endif %}

{% if image is defined and image is not empty %}
    <meta property="og:image" content="{{ asset(image, null, true) }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="{{ asset(image, null, true) }}" />
{% endif %}

<meta property="og:type" content="{{ type|default('website') }}" />

{% if author is defined and author is not empty %}
    <meta property="article:author" content="{{ author }}" />
    <meta property="article:publisher" content="{{ author }}" />
{% endif %}
