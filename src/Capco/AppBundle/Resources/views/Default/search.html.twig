{% extends "CapcoAppBundle::base.html.twig" %}

{% block canonical_link %}{{ url('app_search') }}{% endblock %}

{% block title %}
        {{ parent() }} - {{ 'search.title' | trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1  text-center">
        <div class="container">
            <h1>{{ 'search.title' | trans({}, 'CapcoAppBundle') }}</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <form id="capco_app_search" name="capco_app_search" method="post">

        <div class="container  container--custom">
            {{ form_errors(form.term) }}
            <div clas="row">
                <div class="col-xs-12 col-sm-9 col-md-6 input-group">
                    {{ form_widget(form.term) }}
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit"><i class="cap cap-magnifier"></i></button>
                    </span>
                </div>
            </div>
        </div>

        <div class="container  container--custom">

            <div class="row">

                <div class="col-xs-12 col-sm-3 block--mobile">

                    <h2 class="h5 excerpt" style="margin-top: 0;">{{ 'search.sharpen' | trans({}, 'CapcoAppBundle') }}</h2>

                    {# Type #}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ 'search.form.label.type' | trans({}, 'CapcoAppBundle') }}</h3>
                        </div>
                        <div class="panel-body search__choice-panel">
                            {{ form_widget(form.type) }}
                        </div>
                    </div>

                </div>

                <div class="col-xs-12 col-sm-9">
                    <h2 class="h2" style="margin-top: 0;">
                        {% transchoice count with { '%count%': count} from 'CapcoAppBundle' %}
                        search.results.title
                        {% endtranschoice %}
                        <span class="pull-right">
                            {{ form_widget(form.sort) }}
                        </span>
                    </h2>

                    <hr class="hr--no-margin"/>

                    <ul class="search__results {% if nbPages > 1 %} block {% endif %}">
                        {% for result in results %}
                            {% set default_title = 'search.results.default_title' | trans({}, 'CapcoAppBundle') %}
                            {% set type_label = 'search.results.type.' ~ result.result.hit['_type'] %}
                            {% if result.result.hit['_type'] == 'user' %}
                                {% set title = result.result.hit['highlight']['username'] is defined ? result.result.hit['highlight']['username'][0] : result.transformed.username %}
                            {% else %}
                                {% set title = result.result.hit['highlight']['title'] is defined ? result.result.hit['highlight']['title'][0] : ( result.transformed.title is defined ? result.transformed.title : default_title) %}
                            {% endif %}
                            <li>
                                <h4 class="h4 search-result__title">
                                        <span class="label label-default search-result__type">
                                            {{ type_label | trans({}, 'CapcoAppBundle') }}
                                        </span>
                                        <a class="search-result__link" href="{{ result.transformed | capco_url }}">
                                            {{ title | raw }}
                                        </a>
                                        <span class="small excerpt search-result__date">
                                            {{ result.result.hit['_source']['updatedAt'] | localizeddate('medium', 'none', app.request.locale) }}
                                        </span>
                                </h4>
                                {% for key, highlights in result.result.hit['highlight'] if key != 'title' and key != 'username' %}
                                    <p class="excerpt small">
                                        {% for excerpt in highlights %}
                                            {{ excerpt | raw }}...
                                        {% endfor %}
                                    </p>
                                {% endfor %}
                            </li>
                        {% endfor %}
                    </ul>

                    {% set route, params =  'app_search', form.vars.data %}
                    {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPages, 'route': route, 'params': params} only  %}
                </div>

            </div>

        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(".radio input:checked").parent().addClass('active');
        $(".search__choice-panel > div").on('change', function() {
            $(".search__choice-panel .radio input").parent().removeClass('active');
            $(".search__choice-panel .radio input:checked").parent().addClass('active');
            $("#capco_app_search").submit();
        });
    </script>
{% endblock %}
