{% extends "CapcoAppBundle::base.html.twig" %}

{% block mainContent %}
<style>body { background-color: #F6F6F6 }</style>
<div id="shield-mode" class="container" style="margin-top: 50px">
    <div class="text-center" style="margin-bottom: 10px">
      <img src="{{ media_public_url(capco_site_image_media('image.shield'), 'default_shield') }}"></img>
      <div style="margin-top: 30px"></div>
      {{ capco_site_parameter_value('shield.introduction')|raw }}
      <div style="margin-top: 30px"></div>
    </div>
    <div class="row">
      {{ react_intl_component('ShieldApp', {'rendering': 'client_side'}) }}
    </div>
</div>
{% endblock %}
