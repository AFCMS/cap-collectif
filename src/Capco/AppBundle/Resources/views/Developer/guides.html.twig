{% extends "CapcoAppBundle::base.html.twig" %}

{% block metaTags %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title': 'Developper',
        'url':   url('app_developer')
    } only %}
{% endblock %}

{% block body %}
<style>
.graphiql-wrapper {
    height:715px
}

iframe#graphiql {
    width:100%;
    height:inherit;
    border:1px solid #ddd
}
</style>

<div class="container  developers__container">

<div class="row">
    <h2><a href="/">GraphQL API - Examples</a></h2>
    {% include 'CapcoAppBundle:Developer:menu.html.twig' with {'active': 'guides'} %}
</div>

<div class="row">
<div class="col-md-12">
  <div class="graphiql-wrapper" style="margin-top: 15px">
    <iframe id="graphiql" scrolling="no" src="{{url('graphiql_endpoint')}}?query=toto">
      <p>You must have iframes enabled to use this feature.</p>
    </iframe>
  </div>
</div>
</div>

</div>
