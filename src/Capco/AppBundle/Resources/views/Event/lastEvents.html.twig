{% if events|length > 0 %}
    <div class="container  container--custom">
        <h2 class="h2">{{ 'event.last.title'|trans({}, 'CapcoAppBundle') }}</h2>
        <div class="row">
            {% for event in events %}
                {% include '@CapcoApp/Event/blockEvent.html.twig' %}
            {% endfor %}
        </div>
        <a href="{{ path('app_event') }}" class="btn  btn-primary  btn--outline">{{ 'event.see_all'|trans({}, 'CapcoAppBundle') }}</a>
    </div>
{% endif %}
