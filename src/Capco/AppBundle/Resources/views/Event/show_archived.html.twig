{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_event_archived') }}{% endblock %}

{% set jumbotron_title = capco_site_parameter_value('events.jumbotron.title') %}
{% block title %}
    {% if null != jumbotron_title %}
        {{ parent() }} - {{ jumbotron_title }}
    {% else %}
        {{ parent() }} - {{ 'event.archived'|trans({}, 'CapcoAppBundle') }}
    {% endif %}
{% endblock %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1 text-center">
        <div class="container">
            {% if null != jumbotron_title %}
                <h1>{{ jumbotron_title }}</h1>
            {% else %}
                <h1>{{ 'event.index.title'|trans({}, 'CapcoAppBundle') }}</h1>
            {% endif %}
            {% set jumbotron_body = capco_site_parameter_value('events.jumbotron.body') %}
            {% if null != jumbotron_body %}
                {{ jumbotron_body|raw }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}

    {% set content_body = capco_site_parameter_value('events.content.body') %}
    {% if null != content_body %}
        <div class="container  container--custom">
            {{ content_body|raw }}
        </div>
    {% endif %}

    <div class="container  container--custom">
        <div class="filter  block">
            <div class="row">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="col-xs-12  col-sm-3  col-md-3  col-lg-4  filter__down">
                    {{ form_label(form.theme, null, {'label_attr':{"class":"control-label  sr-only"} }) }}
                    {{ form_errors(form.theme) }}
                    {{ form_widget(form.theme, {'attr':{"class":"form-control"} }) }}
                </div>
                <div class="col-xs-12  col-sm-3  col-md-3  col-lg-3 filter__down">
                    {{ form_label(form.consultation, null, {'label_attr':{"class":"control-label  sr-only"} }) }}
                    {{ form_errors(form.consultation) }}
                    {{ form_widget(form.consultation, {'attr':{"class":"form-control"} }) }}
                </div>
                <div class="col-xs-12  col-sm-3  col-md-3  col-lg-3 filter__down">
                    {{ form_label(form.term, null, {'label_attr':{"class":"control-label sr-only"} }) }}
                    <div class="input-group  filter__search">
                        {{ form_errors(form.term) }}
                        {{ form_widget(form.term, {'attr':{"class":"form-control", "placeholder": 'consultation.searchform.search'|trans({}, 'CapcoAppBundle')} }) }}
                        <span class="input-group-btn">
                                <button type="submit" class="btn  btn-default"> <i class="cap cap-magnifier"></i><span class="sr-only">{{ 'consultation.searchform.search'|trans({}, 'CapcoAppBundle') }}</span></button>
                            </span>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        {% if years|length > 0 %}
            {% for year, months in years %}
                {% for month, events in months %}
                    {% set date = (year ~ '-' ~ month ~ '-01') %}
                    <h2>{{ date | localizeddate('none', 'none', app.request.locale, null, "MMMM Y") | capitalize }}</h2>
                    <div class="row">
                        {% for event in events %}
                            {% include '@CapcoApp/Event/blockEvent.html.twig' %}
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endfor %}
        {% else %}
            <p>
                {{ 'event.no_result'|trans({}, 'CapcoAppBundle') }}
            </p>
        {% endif %}

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).on('load', function() {
            App.module.equalheight('.event-js');window.onresize = App.module.resized('.event-js');
        });
    </script>
{% endblock %}
