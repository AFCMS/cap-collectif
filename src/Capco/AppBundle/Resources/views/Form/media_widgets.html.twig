{% block sonata_media_type_widget %}
    <div class="row">
        <div class="col-md-6">
            {% if value is not empty and value.providerReference %}
                {% thumbnail value, 'idea' with {'class': 'img-responsive'} %}
                {% if sonata_admin_enabled is defined and sonata_admin_enabled %}
                    <p><a href="{{ url('admin_capco_media_media_edit', {id: value.id}) }}"><strong>{{ value.name }}</strong></a></p>
                {% else %}
                    <p><strong>{{ value.name }}</strong></p>
                {% endif %}
            {% else %}
                <img src="{{ asset('bundles/sonatamedia/grey.png') }}" style="width: 85px; height: 85px; display: block; margin-bottom: 5px;"/>
                <p><strong>{{ 'no_linked_media'|trans({}, 'SonataMediaBundle') }}</strong></p>
            {% endif %}
        </div>

        <div class="col-md-6">
            {{ block('form_widget') }}
        </div>
    </div>
{% endblock sonata_media_type_widget %}
