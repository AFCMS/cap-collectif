{% if highlighteds | length > 0 %}
    <div id="highlights" class="container container--custom">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% else %}
            <h2 class="h2">{{ 'homepage.section.highlighted' | trans({}, 'CapcoAppBundle') }}</h2>
        {% endif %}
        <div class="row">
            <div class="col-md-8">
                <div id="carousel-highlighted" class="carousel vertical slide" data-ride="carousel" data-interval="false">
                  <div class="carousel-inner" role="listbox">
                    {% for highlighted in highlighteds if has_feature_enabled(highlighted.associatedFeatures) %}
                        {% if highlighted.type == 'project' %}
                            {% set url = (highlighted.content | capco_first_step_link) %}
                        {% else %}
                            {% set url = path('app_' ~ highlighted.type ~ '_show', {'slug': highlighted.content.slug}) %}
                        {% endif %}
                        <div class="item {% if loop.first %}active{% endif %}">
                        <a href="{{ url }}" class="h3" >
                            {% if highlighted.media is not null %}
                                {% thumbnail highlighted.media, 'slider' with {'class': 'img-responsive'} %}
                            {% else %}
                                <span class="bg__wrapper">
                                    <div class="bg--default bg--project"></div>
                                </span>
                            {% endif %}
                            {{ highlighted.content.title }}
                        </a>
                        </div>
                    {% endfor %}
                 </div>
            </div>
            </div>
            <div class="col-md-4 hidden-xs hidden-sm">
                <nav class="carousel-sidebar">
                    <ul class="nav carousel-sidenav">
                        {% for key, highlighted in highlighteds if has_feature_enabled(highlighted.associatedFeatures) %}
                            <li data-target="#carousel-highlighted" data-slide-to="{{ key }}" class="{% if loop.first %}active{% endif %}">
                                <a href="#">{{ highlighted.content.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endif %}
