{% if props | length > 0 %}
    <div id="highlights" class="container--custom">
        <div class="container">
            <h2 class="h2">
                {% if null != section.title %}
                    {{ section.title }}
                {% else %}
                    {{ 'homepage.section.highlighted' | trans({}, 'CapcoAppBundle') }}
                {% endif %}
            </h2>
            {{ react_render_component('CarouselApp', {
                'props': props,
            }) }}
        </div>
    </div>
{% endif %}
