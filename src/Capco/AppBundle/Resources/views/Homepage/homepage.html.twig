{% set page_class = "home-page" %}
{% extends "CapcoAppBundle::base.html.twig" %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1  text-center">
        <div class="container">
            <h1>{{ capco_site_parameter_value('homepage.jumbotron.title')}}</h1>
            <p>{{ capco_site_parameter_value('homepage.jumbotron.body')}}</p>
            <p><a href="#" class="btn  btn--outline btn-custom-1  btn-lg" role="button">{{ capco_site_parameter_value('homepage.jumbotron.button')}}</a></p>
        </div>
    </div>

    <div class="jumbotron  jumbotron--custom  jumbotron--bg-2  jumbotron--small">
        <div class="container">
            <h2>{{ capco_site_parameter_value('homepage.jumbotron2.title')}}</h2>
            <p>{{ capco_site_parameter_value('homepage.jumbotron2.body')}}</p>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ render_esi(controller('CapcoAppBundle:Homepage:lastTopics', {'max': 4, 'offset': 0})) }}
    {{ render_esi(controller('CapcoAppBundle:Homepage:lastConsultations', {'max': 4, 'offset': 0})) }}
    {{ render_esi(controller('CapcoAppBundle:Homepage:lastIdeas', {'max': 4, 'offset': 0})) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).on('load', function() {
            App.module.equalheight('.thumbnail--custom');
            window.onresize = App.module.rezised('.thumbnail--custom');
        });
    </script>
{% endblock %}
