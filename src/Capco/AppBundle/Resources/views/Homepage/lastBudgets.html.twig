{% if budgets|length > 0 %}
    <div class="container  container--custom">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% else %}
            <h2 class="h2">{{ 'homepage.projects.title' | trans({}, 'CapcoAppBundle') }}</h2>
        {% endif %}
        {% if null != section.teaser %}
            <p class="block">{{ section.teaser }}</p>
        {% endif %}
        {% if null != section.body %}
            <p>{{ section.body | raw }}</p>
        {% endif %}
        <div class="row">
            {% for budget in budgets %}
                {% include '@CapcoApp/Project/blockProject.html.twig' with {'project': budget} only %}
            {% endfor %}
        </div>
        <a href="{{ path('app_project') }}" class="btn  btn-primary  btn--outline">{{ 'budget.see_all'|trans({}, 'CapcoAppBundle') }}</a>
    </div>
{% endif %}
