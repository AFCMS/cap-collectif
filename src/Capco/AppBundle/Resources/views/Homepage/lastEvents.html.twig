{% if events|length > 0 %}
    <div class="container  container--custom">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% else %}
            <h2 class="h2">{{ 'homepage.events.title' | trans({}, 'CapcoAppBundle') }}</h2>
        {% endif %}
        {% if null != section.teaser %}
            <p class="block">{{ section.teaser }}</p>
        {% endif %}
        {% if null != section.body %}
            <p>{{ section.body | raw }}</p>
        {% endif %}
        <div class="row">
            {% for event in events %}
                {% include '@CapcoApp/Event/blockEvent.html.twig' %}
            {% endfor %}
        </div>
        <a href="{{ path('app_event') }}" class="btn  btn-primary  btn--outline">{{ 'event.see_all'|trans({}, 'CapcoAppBundle') }}</a>
    </div>
{% endif %}
