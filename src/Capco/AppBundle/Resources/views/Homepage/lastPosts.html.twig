{% if posts|length > 0 %}
    {% set locale = app.request.locale %}
    <section id="news" class="section--custom">
        <div class="container">
            {% if null != section.title %}
                <h2 class="h2">{{ section.title }}</h2>
            {% else %}
                <h2 class="h2">{{ 'menu.news' | trans({}, 'CapcoAppBundle') }}</h2>
            {% endif %}
            {% if null != section.teaser %}
                <p class="block">{{ section.teaser }}</p>
            {% endif %}
            {% if null != section.body %}
                <p>{{ section.body | raw }}</p>
            {% endif %}
            <ul class="media-list">
                {% for post in posts %}
                    {% include '@CapcoApp/Blog/blockPost.html.twig' with {'post': post} only %}
                {% endfor %}
            </ul>
            {% if posts|length > 1 %}
                <a href="{{ path('app_blog', {'_locale': locale}) }}"
                   class="btn  btn-primary  btn--outline">
                    {{ 'blog.see_all'|trans({}, 'CapcoAppBundle') }}</a>
            {% endif %}
        </div>
    </section>
{% endif %}
