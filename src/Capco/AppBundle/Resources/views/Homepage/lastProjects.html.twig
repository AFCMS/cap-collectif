{% if count > 0 %}
    <div class="container  container--custom">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% endif %}
        {% if null != section.teaser %}
            <p class="block">{{ section.teaser }}</p>
        {% endif %}
        {% if null != section.body %}
            <p>{{ section.body | raw }}</p>
        {% endif %}

        {{ react_intl_component('ProjectsListApp', {'props': props}) }}

        {% if count > max %}
            <a href="{{ path('app_project') }}" class="btn  btn-primary  btn--outline">{{ 'project.see_all'|trans({}, 'CapcoAppBundle') }}</a>
        {% endif %}
    </div>
{% endif %}
