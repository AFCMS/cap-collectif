{% if proposals|length > 0 %}
    <div class="container  container--custom">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% else %}
            <h2 class="h2">{{ 'homepage.ideas.title' | trans({}, 'CapcoAppBundle') }}</h2>
        {% endif %}
        {% if null != section.teaser %}
            <p class="block">{{ section.teaser }}</p>
        {% endif %}
        {% if null != section.body %}
            <p>{{ section.body | raw }}</p>
        {% endif %}
        <div class="row">
            {% for proposal in proposals %}
                {% include '@CapcoApp/Idea/blockProposal.html.twig' with {'proposal': proposal} only %}
            {% endfor %}
        </div>
        <a href="{{ path('app_project_show_proposals') }}" class="btn  btn-primary  btn--outline">{{ 'proposal.see_all'|trans({}, 'CapcoAppBundle') }}</a>
    </div>
{% endif %}
