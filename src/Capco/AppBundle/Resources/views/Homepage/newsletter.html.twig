<div class="container">
    {% if null != section.title %}
        <h2 class="h2">{{ section.title }}</h2>
    {% else %}
        <h2 class="h2">{{ 'homepage.newsletter.title' | trans({}, 'CapcoAppBundle') }}</h2>
    {% endif %}
    {% if null != section.teaser %}
        <p class="block">{{ section.teaser }}</p>
    {% endif %}
    {% if null != section.body %}
        <p>{{ section.body | raw }}</p>
    {% endif %}
    {{ form_start(form, {'attr': { 'class': 'form-inline' }}) }}
       {{ form_errors(form) }}
       {{ form_label(form.email, null, {'label_attr':{"class":"sr-only"} }) }}
       {{ form_errors(form.email) }}
       {{ form_widget(form.email, {'attr':{'style': 'width: 250px;', "placeholder": 'homepage.newsletter.enter_email'|trans({}, 'CapcoAppBundle')} }) }}
       <button type="submit" class="btn  btn-primary block--first-mobile">{{ 'homepage.newsletter.submit'|trans({}, 'CapcoAppBundle') }}</button>
    {{ form_end(form) }}
</div>
