{% if videos | length > 0 %}
    <section id="videos" class="section--custom">
        <div class="container">
            {% if null != section.title %}
                <h2 class="h2">{{ section.title }}</h2>
            {% else %}
                <h2 class="h2">{{ 'homepage.videos.title' | trans({}, 'CapcoAppBundle') }}</h2>
            {% endif %}
            {% if null != section.teaser %}
                <p class="block">{{ section.teaser }}</p>
            {% endif %}
            {% if null != section.body %}
                <p>{{ section.body | raw }}</p>
            {% endif %}
            <div class="row">
                {% for video in videos %}
                    <div class="col-xs-12  col-sm-6  col-md-4  col-lg-4">
                            {% include '@CapcoApp/video.html.twig' %}
                            <div class="video-description">
                                {% if video.title %}
                                    <h3 class="video-title">{{ video.title }}</h3>
                                {% endif %}
                                {% if video.body %}
                                    <p>{{ video.body }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}
