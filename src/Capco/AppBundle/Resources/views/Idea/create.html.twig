{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_idea_create') }}{% endblock %}

{% block metaTags %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title': 'idea.create.title'|trans({}, 'CapcoAppBundle'),
        'url':   url('app_idea_create'),
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'idea.create.title'|trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block body %}
    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--light-gray  block--bordered">
                    <div class="dialog__header  box">
                        <h1 class="h4  dialog__title">{{ 'idea.create.title'|trans({}, 'CapcoAppBundle') }}</h1>
                    </div>
                    <div class="dialog__message  box">
                        <p>{{ 'idea.create.text'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% include 'CapcoUserBundle:Avatar:avatar.html.twig' with { 'user': app.user, 'classes': 'media-object', 'link_classes': 'pull-left'} only %}
                                <div class="media-body">
                                    {{ form_errors(form) }}
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-right">
                                <a href="{{ path('app_idea') }}" class="btn  btn-default">{{ 'idea.create.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-success">{{ 'idea.create.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
