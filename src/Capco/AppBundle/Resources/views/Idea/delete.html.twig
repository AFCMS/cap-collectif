{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--cause  block--shadowed">
                    <div class="dialog__header  box">
                        <h4 class="h4  dialog__title">{{ 'idea.delete.title'|trans({}, 'CapcoAppBundle') }}</h4>
                    </div>
                    <div class="dialog__excerpt  excerpt  box">
                        <p>{{ 'idea.delete.text'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>

                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                    <h4>{{ idea.title }}</h4>
                                    <div>
                                        {{ idea.body|truncate(300, true, ' [...]') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-right">
                                <a href="{{ path('app_idea_show', {'slug': idea.slug}) }}" class="btn  btn-default">{{ 'idea.delete.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-danger">{{ 'idea.delete.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
