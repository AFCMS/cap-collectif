{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_idea') }}{% endblock %}

{% set jumbotron_title = capco_site_parameter_value('ideas.jumbotron.title') %}
{% set jumbotron_body = capco_site_parameter_value('ideas.jumbotron.body') %}

{% block metaTags %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       (jumbotron_title ?: 'idea.index.page_title'|trans({}, 'CapcoAppBundle')),
        'description': (jumbotron_body|striptags ?: content_body|striptags|truncate(250, true)),
        'url':         url('app_idea')
    } only %}
{% endblock %}

{% block title %}
    {% if null != jumbotron_title %}
        {{ parent() }} - {{ jumbotron_title }}
    {% else %}
        {{ parent() }} - {{ 'idea.index.page_title'|trans({}, 'CapcoAppBundle') }}
    {% endif %}
{% endblock %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1 text-center">
        <div class="container">
            {% if null != jumbotron_title %}
                <h1>{{ jumbotron_title }}</h1>
            {% else %}
                <h1>{{ 'idea.index.page_title'|trans({}, 'CapcoAppBundle') }}</h1>
            {% endif %}
            {% if null != jumbotron_body %}
                {{ jumbotron_body|raw }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ react_intl_component('IdeasIndexPageApp', {'props': props}) }}
{% endblock %}
