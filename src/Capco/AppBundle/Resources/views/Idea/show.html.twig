{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h1">{{ idea.title }}</h1>
        <div class="block">
            <div class="media">
                {% if idea.Author and idea.Author.Media %}
                    <a class="pull-left" href="#">
                        {% thumbnail idea.Author.Media, 'avatar' with {'title': idea.Author.fullname, 'alt': idea.Author.fullname, 'class': 'media-object img-circle'} %}
                    </a>
                {% endif %}
                <div class="media-body">
                    <p class="media--aligned  excerpt"><a href="#">{{ idea.Author.username }}</a> dans <a href="{{ path('app_theme_show', {'slug': idea.Theme.slug}) }}">{{ idea.Theme.title }}</a> le {{ idea.createdAt | localizeddate('long', 'none') }}</p>
                </div>
            </div>
        </div>
        {% if idea.media %}
            {% thumbnail idea.Media, 'idea' with {'class': 'block  img-responsive'} %}
        {% endif %}

        <div class="block">
            {{ idea.body|raw }}
        </div>

        {% if userVoteCount == 0 %}
            {{ form_start(form, {'attr':{"class":"inline"} } ) }}
                {{ form_errors(form) }}
                <button class="btn btn-success btn--outline"><i class="cap cap-hand-like-2-1"></i> {{ 'idea.show.vote'|trans({}, 'CapcoAppBundle') }}</button>
                <span class="nb-bordered">{{ idea.voteCount }}</span>
            {{ form_end(form) }}
        {% else %}
            {{ form_start(form, {'attr':{"class":"inline"} } ) }}
            {{ form_errors(form) }}
            <button class="btn btn-danger">{{ 'idea.show.cancel'|trans({}, 'CapcoAppBundle') }}</button>
            <span class="nb-bordered">{{ idea.voteCount }}</span>
            {{ form_end(form) }}

        {% endif %}

        <div class="dropdown dropdown--social">
            <button class="btn  btn-default" type="button" data-toggle="dropdown"><i class="cap-network-1"></i> {{ 'idea.show.share'|trans({}, 'CapcoAppBundle') }} <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#"><i class="cap-facebook"></i> Facebook</a></li>
                <li><a href="#"><i class="cap-twitter"></i> Twitter</a></li>
                <li><a href="#"><i class="cap-gplus"></i> Google+</a></li>
                <li><a href="#"><i class="cap-mail-1"></i> Mail</a></li>
            </ul>
        </div>

        <div class="pull-right no-float-mobile">
            <a href="#" class="btn  btn-dark-gray  btn--outline"><i class="cap cap-flag-1-1"></i> {{ 'idea.show.report'|trans({}, 'CapcoAppBundle') }}</a>
            {% if app.user.id is defined and app.user.id == idea.Author.id %}
                <a href="{{ path('app_idea_update', {'slug': idea.slug}) }}" class="btn  btn-warning btn--outline"><i class="cap cap-pencil-1-1"></i> {{ 'idea.show.edit'|trans({}, 'CapcoAppBundle') }}</a>
            {% endif %}
        </div>
    </div>

    {{ render_esi(controller('CapcoAppBundle:Idea:lastIdeas', {'max': 4, 'offset': 0})) }}

{% endblock %}
