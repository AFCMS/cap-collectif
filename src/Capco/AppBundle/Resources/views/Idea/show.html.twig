{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h1"> {{ idea.title }}</h1>
        <div class="block">
            <div class="media">
                {% if idea.Author and idea.Author.Media %}
                    <a class="pull-left" href="{{ path('capco_user_profile_show_all', {'username': idea.Author}) }}">
                        {% thumbnail idea.Author.Media, 'avatar' with {'title': idea.Author.username, 'alt': idea.Author.username, 'class': 'media-object img-circle'} %}
                    </a>
                {% endif %}
                <div class="media-body">
                    <p class="media--aligned  excerpt"><a href="{{ path('capco_user_profile_show_all', {'username': idea.Author}) }}">{{ idea.Author.username }}</a> dans <a href="{{ path('app_theme_show', {'slug': idea.Theme.slug}) }}">{{ idea.Theme.title }}</a> le {{ idea.createdAt | localizeddate('long', 'none') }} {% if idea.isTrashed %}<span class="label label-default">{{ 'idea.show.trashed.label'|trans({}, 'CapcoAppBundle') }}</span>{% endif %}</p>
                </div>
            </div>
        </div>
        {% if idea.media %}
            {% thumbnail idea.Media, 'idea' with {'class': 'block  img-responsive'} %}
        {% endif %}

        <div class="block">
            {{ idea.body|raw }}
        </div>

        {% if idea.isTrashed %}
            <button disabled="disabled" class="btn btn-dark-gray"><i class="cap cap-hand-like-2-1"></i> {{ 'idea.show.vote'|trans({}, 'CapcoAppBundle') }}</button>
            <span class="nb-bordered">{{ idea.voteCount }}</span>
        {% else %}
            {% if userVoteCount == 0 %}
                {{ form_start(form, {'attr':{"class":"inline"} } ) }}
                    {{ form_errors(form) }}
                    <button class="btn btn-success"><i class="cap cap-hand-like-2-1"></i> {{ 'idea.show.vote'|trans({}, 'CapcoAppBundle') }}</button>
                    <span class="nb-bordered">{{ idea.voteCount }}</span>
                {{ form_end(form) }}
            {% else %}
                {{ form_start(form, {'attr':{"class":"inline"} } ) }}
                {{ form_errors(form) }}
                <button class="btn btn-danger">{{ 'idea.show.cancel'|trans({}, 'CapcoAppBundle') }}</button>
                <span class="nb-bordered">{{ idea.voteCount }}</span>
                {{ form_end(form) }}

            {% endif %}
        {% endif %}

        {% if idea.isTrashed == false %}
            <div class="pull-right no-float-mobile">

                {% if(userReportingIdea == false) %}
                    <a href="{{ path('app_report_idea' ,{'idea_slug': idea.slug } ) }}" class="btn btn-dark-gray  btn--outline"><i class="cap cap-flag-1"></i> {{ 'idea.show.report'|trans({}, 'CapcoAppBundle') }}</a>
                {% else %}
                    <button disabled="disabled" class="btn btn-dark-gray"><i class="cap cap-flag-1"></i> source signalé</button>
                {% endif %}

                {% if app.user.id is defined and app.user.id == idea.Author.id %}
                    <a href="{{ path('app_idea_update', {'slug': idea.slug}) }}" class="btn  btn-dark-gray  btn--outline"><i class="cap cap-pencil-1-1"></i> {{ 'idea.show.edit'|trans({}, 'CapcoAppBundle') }}</a>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {% if idea.isTrashed == false %}
        {{ render_esi(controller('CapcoAppBundle:Idea:lastIdeas', {'max': 4, 'offset': 0})) }}
    {% endif %}

    {% if idea.isTrashed == true and idea.trashedReason is not null %}
        <div class="container">
            <div class="row">
                <h2>Motif de la modération</h2>
                <p class="excerpt">le {{ idea.trashedAt | localizeddate('long', 'none') }}</p>
                <p>{{ idea.trashedReason }}</p>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).on('load', function() {
            App.module.equalheight('.media--macro');window.onresize = App.module.rezised('.media--macro');
        });
    </script>
{% endblock %}

