{% extends '@CapcoApp/base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--orange  block--shadowed">
                    <div class="dialog__header  box">
                        <h4 class="h4  dialog__title">{{ 'idea.update.title'|trans({}, 'CapcoAppBundle') }}</h4>
                    </div>
                    <div class="dialog__excerpt  excerpt  box">
                        <p>{{ 'idea.update.text'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% if idea.Author and idea.Author.Media %}
                                    <a class="pull-left" href="{{ path('capco_user_profile_show_all', {'slug': idea.Author.slug}) }}">
                                        {% thumbnail idea.Author.Media, 'avatar' with {'title': idea.Author.username, 'alt': idea.Author.username, 'class': 'media-object img-circle'} %}
                                    </a>
                                {% endif %}
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-left">
                                <a href="{{ path('app_idea_delete', {'slug': idea.slug}) }}" class="btn btn-danger">{{ 'idea.update.delete'|trans({}, 'CapcoAppBundle') }}</a>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('app_idea_show', {'slug': idea.slug}) }}" class="btn  btn-default">{{ 'idea.create.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-warning">{{ 'idea.update.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">
        $(window).on('load', function() {
            CKEDITOR.replace('capco_appbundle_ideaupdatetype_body', {
                toolbarGroups : [
                    { name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ] },
                    { name: 'paragraph',   groups: [ 'list', 'indent', 'blocks', 'align', 'bidi' ] },
                    { name: 'styles' }
                ]
            });
        });
    </script>
{% endblock %}
