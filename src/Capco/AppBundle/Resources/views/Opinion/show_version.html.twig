{% extends '@CapcoApp/Opinion/show.html.twig' %}

{% block canonical_link %}
    {{ url('app_project_show_opinion_version', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug, 'versionSlug': version.slug}) }}
{% endblock %}

{% block metaTags %}
    {% set projectCover %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       version.title,
        'description': version.body|striptags|truncate(250, true),
        'url':         url('app_project_show_opinion_version', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug, 'versionSlug': version.slug}),
        'type':        'article',
        'image':       projectCover,
        'author':      is_feature_enabled('profiles') ? url('capco_user_profile_show_all', {'slug': opinion.Author.slug}) : null
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ version.title }}
{% endblock %}

{% block reduxStore %}
  {% set initialState = {
    'opinion': {
      'currentVersionId': version.id,
      'opinionsById': {},
      'versionsById': {
        (version.id) : {
          'id': version.id,
          'title': version.title,
          'comment': version.comment,
          'body': version.body,
          'backLink': backLink,
          'parent': {
            'id': version.parent.id,
            'title': version.parent.title,
            'type': {
              'votesHelpText': version.parent.opinionType.votesHelpText,
              'voteWidgetType': version.parent.opinionType.voteWidgetType,
            }
          },
          'type': {
            'voteWidgetType': version.parent.opinionType.voteWidgetType,
            'votesHelpText': version.parent.opinionType.votesHelpText,
          },
          'votes': [],
          'votesCount': version.getVotesCountAll(),
          'votesCountOk': version.votesCountOk,
          'votesCountNok': version.votesCountNok,
          'votesCountMitige': version.votesCountMitige,
          'userVote': version.getVoteValueByUser(app.user)
        }
      }
    }
  } %}
  {% include '@CapcoApp/redux_store.html.twig' with {'data' : initialState} %}
{% endblock %}

{% block content %}
    {{ react_render_component('OpinionPageApp', {'props': {'opinionId': opinion.id, 'versionId': version.id} }) }}
{% endblock %}
