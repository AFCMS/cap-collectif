{% extends '@CapcoApp/Opinion/show.html.twig' %}

{% block canonical_link %}
    {{ url('app_project_show_opinion_version', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug, 'versionSlug': version.slug}) }}
{% endblock %}

{% block metaTags %}
    {% set projectCover %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       version.title,
        'description': version.body|striptags|truncate(250, true),
        'url':         url('app_project_show_opinion_version', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug, 'versionSlug': version.slug}),
        'type':        'article',
        'image':       projectCover,
        'author':      url('capco_user_profile_show_all', {'slug': opinion.Author.slug})
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ version.title }}
{% endblock %}

{% block content %}
   <div id="render-opinion-version" data-version="{{ version.id }}" data-opinion="{{ opinion.id }}" data-reporting-enabled={{ is_feature_enabled('reporting') ? "true" : "false" }}>
       <p class="text-center">{{ 'global.loading' | trans({}, 'CapcoAppBundle') }}</p>
   </div>
{% endblock %}
