{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_consultation_edit_opinion', {'consultationSlug': consultation.slug, 'opinionTypeSlug': opinionType.slug, 'opinionSlug': opinion.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'opinion.update.page_title'|trans({'%title%': opinion.title}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--{{ opinion.opinionType.color }}  block--bordered">
                    <div class="dialog__header  box">
                        <h1 class="h4  dialog__title">{{ 'opinion.update.title'|trans({}, 'CapcoAppBundle') }}</h1>
                    </div>
                    <div class="dialog__message  box">
                        <p>{{ 'opinion.update.text'|trans({}, 'CapcoAppBundle') }}</p>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% include 'CapcoUserBundle:Avatar:avatar.html.twig' with { 'user': opinion.Author, 'classes': 'media-object', 'link_classes': 'pull-left'} only %}
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <a href="{{ path('app_consultation_delete_opinion' ,{'consultationSlug': consultation.slug, 'opinionTypeSlug':opinionType.slug, 'opinionSlug': opinion.slug } ) }}" class="btn  btn-danger">{{ 'opinion.update.delete'|trans({}, 'CapcoAppBundle') }}</a>
                            <div class="pull-right">
                                <a href="{{ path('app_consultation_show_opinions', {'consultationSlug': consultation.slug, 'opinionTypeSlug': opinionType.slug}) }}" class="btn  btn-default">{{ 'opinion.update.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-warning">{{ 'opinion.update.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
