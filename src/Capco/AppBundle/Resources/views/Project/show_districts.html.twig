{% set districtsCount = project.districts|length %}
{% if districtsCount < 3 %}
    {% for district in project.districts %}
        {% if loop.first %}Â·{% endif %}
        {{district.name}}{% if not loop.last %}, {% endif %}
    {% endfor %}
{% else %}
    <button class="btn-link project__district-modal-link" data-toggle="modal" data-target="#modal-district-list">
        {{project.districts[0].name}} {{ 'and-count-other-areas' | trans({'{count}': districtsCount - 1 }, 'CapcoAppBundle') }}
    </button>
{% endif %}
<div class="modal fade modal--custom" id="modal-district-list" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <p class="modal-title h4"><strong>{{ 'count-area' | trans({'{count}': districtsCount}, 'CapcoAppBundle') }}</strong></p>
            </div>
            <div class="modal-body">
                {% for district in project.districts %}
                    <div class="project__district-modal-item">{{district.name}}</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
