{% extends '@CapcoApp/Project/show.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_posts', {'projectSlug': project.slug}) }}{% endblock %}

{% block metaTags %}
    <meta property="og:title" content="{{ project.title }} - Posts" />
    <meta property="og:url" content="{{ url('app_project_show_posts', {'projectSlug': project.slug}) }}" />
    <meta property="og:type" content="project" />
    {% if project.Cover %}
        <meta property="og:image" content="{% path project.Cover, 'blockHeader' %}" />
    {% endif %}
    <meta property="article:author" content="{{ url('capco_user_profile_show_all', {'slug': project.Author.slug}) }}" />
    <meta property="article:publisher" content="{{ url('capco_user_profile_show_all', {'slug': project.Author.slug}) }}" />
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'project.show.posts.title' | trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Project/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12  col-sm-4  col-md-3">
                {{ render(controller('CapcoAppBundle:Site/Project:showMeta', {'projectSlug': project.slug, 'currentStepSlug': 'posts_step'})) }}
            </div>

            <div class="col-xs-12  col-sm-8  col-md-9" id="details">
                <div class="block  box">
                    <h2 class="h2">{{ 'project.show.posts.title' | trans({}, 'CapcoAppBundle') }} <span class="small excerpt">{{ posts | length }}</span></h2>
                    <ul class="media-list">
                        {% for post in posts %}
                            {% include '@CapcoApp/Blog/blockPost.html.twig' with {'post': post} only %}
                        {% endfor %}
                    </ul>
                </div>
            </div> <!-- col-xs-12  col-sm-8  col-md-9 -->
        </div> <!-- .row -->


        {% set route, params = 'app_project_show_posts', {'projectSlug': project.slug} %}
        {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPage, 'route': route, 'params': params} only  %}

    </div>

{% endblock %}
