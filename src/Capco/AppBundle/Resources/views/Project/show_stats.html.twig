{% extends '@CapcoApp/Project/base.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_stats', {'projectSlug': project.slug}, true) }}{% endblock %}

{% block metaTags %}
    {% set image %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
    'title':        ('project.stats.title' | trans({}, 'CapcoAppBundle')~ ' ' ~ 'of.project' | trans({}, 'CapcoAppBundle') ~ ' ' ~ project.title),
    'url':          url('app_project_show_stats', {'projectSlug': project.slug}),
    'description':  project.metaDescription|striptags,
    'type':         'project',
    'image':        image,
    'author':       is_feature_enabled('profiles') ? url('capco_user_profile_show_all', {'slug': project.firstAuthor.slug}) : null
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'project.stats.title' | trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block details %}
    {{ react_render_component('ProjectStatsPageApp', { 'props': props }) }}
{% endblock %}
