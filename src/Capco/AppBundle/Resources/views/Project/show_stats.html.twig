{% extends '@CapcoApp/Project/base.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_stats', {'projectSlug': project.slug}, true) }}{% endblock %}

{% block metaTags %}
    {% set projectCover %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
    'title':  project.title~' - '~('project.show.stats.title' | trans({}, 'CapcoAppBundle')),
    'url':    url('app_project_show_stats', {'projectSlug': project.slug}),
    'type':   'project',
    'image':  projectCover,
    'author': url('capco_user_profile_show_all', {'slug': project.Author.slug})
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'project.show.stats.title' | trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block details %}
    {{ react_intl_component('ProjectStatsPageApp', {'props': props, 'rendering': 'client_side'}) }}
{% endblock %}
