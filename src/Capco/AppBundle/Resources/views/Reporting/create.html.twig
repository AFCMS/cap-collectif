{% extends '@CapcoApp/base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'reporting.create.title'|trans({}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--white  block--bordered">
                    <div class="dialog__header  box">
                        <h1 class="h4  dialog__title">{{ 'reporting.create.title'|trans({}, 'CapcoAppBundle') }}</h1>
                    </div>
                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                {% include 'CapcoUserBundle:Avatar:avatar.html.twig' with { 'user': app.user, 'classes': 'media-object', 'link_classes': 'pull-left'} only %}
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="dialog__message  box">
                            <p>{{ 'reporting.create.text'|trans({}, 'CapcoAppBundle') }}</p>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-right">
                                {% if idea is defined %}
                                    <a href="{{ path('app_idea_show', {'slug': idea.slug}) }}" class="btn  btn-default">{{ 'reporting.create.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                {% elseif comment is defined %}
                                    <a href="{{ capco_comment_object_url(comment) }}" class="btn  btn-default">{{ 'reporting.create.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                {% else %}
                                    <a href="{{ path('app_project_show_opinion', {'projectSlug': opinion.step.project.slug, 'stepSlug': opinion.step.slug, 'opinionTypeSlug': opinion.opinionType.slug, 'opinionSlug': opinion.slug}) }}" class="btn  btn-default">{{ 'reporting.create.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                {% endif %}
                                <button type="submit" class="btn  btn-primary">{{ 'reporting.create.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
