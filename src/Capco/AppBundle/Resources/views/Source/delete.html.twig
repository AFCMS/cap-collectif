{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_delete_source', {'projectSlug': opinion.step.project.slug, 'stepSlug': opinion.step.slug, 'opinionTypeSlug': opinion.opinionType.slug, 'opinionSlug': opinion.slug, 'sourceSlug': source.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ opinion.title }} - {{ 'source.delete.page_title'|trans({'%title%': source.title}, 'CapcoAppBundle') }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block body %}
    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="dialog  dialog--light-gray  block--bordered">
                    <div class="dialog__header  box">
                        <h1 class="h4  dialog__title">{{ 'source.delete.title'|trans({}, 'CapcoAppBundle') }}</h1>
                    </div>

                    <form method="post" {{ form_enctype(form) }}>
                        <div class="dialog__body  box">
                            <div class="media">
                                <div class="media-body">
                                    {{ form_rest(form) }}
                                    <p class="h4">{{ 'source.delete.subtitle'|trans({}, 'CapcoAppBundle') }}</p>
                                    <div>
                                        {{ 'source.delete.text'|trans({}, 'CapcoAppBundle') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dialog__footer  box">
                            <div class="pull-right">
                                <a href="{{ path('app_project_show_opinion', {'projectSlug': opinion.step.project.slug, 'stepSlug': opinion.step.slug, 'opinionTypeSlug': opinion.opinionType.slug, 'opinionSlug': opinion.slug}) }}" class="btn  btn-default">{{ 'source.delete.cancel'|trans({}, 'CapcoAppBundle') }}</a>
                                <button type="submit" class="btn  btn-danger">{{ 'source.delete.submit'|trans({}, 'CapcoAppBundle') }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
