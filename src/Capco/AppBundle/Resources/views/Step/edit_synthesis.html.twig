{% extends '@CapcoApp/Consultation/show.html.twig' %}

{% block canonical_link %}{{ url('app_consultation_edit_synthesis', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Consultation/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        {% if currentStep.synthesis %}
            <div id="render-synthesis-edit-box" data-mode="edit" data-synthesis="{{ currentStep.synthesis.id }}"></div>
        {% else %}
            <p class="excerpt">{{ 'synthesis.edit.no_synthesis' | trans({}, 'CapcoAppBundle') }}</p>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var Synthesis = require('Resources/js/synthesis');
    </script>
{% endblock %}
