{% extends '@CapcoApp/Project/base.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_opinions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block metaTags %}
    {% set image %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% set title = currentStep.title ~ ' ' ~ 'of.project' | trans({}, 'CapcoAppBundle') ~ ' ' ~ project.title %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       title,
        'type':        'project',
        'description': currentStep.metaDescription ?: currentStep.body|striptags|truncate(250, true),
        'author':      is_feature_enabled('profiles') ? url('capco_user_profile_show_all', {'slug': project.firstAuthor.slug}) : null,
        'image':       image,
        'url':         url('app_project_show_opinions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug})
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block details %}
    <p id="back-button">
        <a href="{{ path('app_project_show_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}" class="btn btn-default">
            <i class="cap cap-arrow-1-1"></i> {{ 'project.show.global.title' | trans({}, 'CapcoAppBundle') }}
        </a>
    </p>

    <div id="opinions__ranking" class="anchor-offset  block  block--bordered">

        {% set opinionsLabel = project.opinionTerm == 0 ? 'project.ranking.opinions' : 'project.ranking.articles' %}
        <div class="opinion opinion--default">
            <div class="opinion__header  opinion__header--mobile-centered">
                <div class="pull-left opinion__header__title">
                    {{ opinionsLabel | transchoice(opinions | length, {}, 'CapcoAppBundle')  }}
                </div>
            </div>
        </div>

        {% if opinions | length > 0 %}
            <ul class="media-list  opinion__list">
                {% for opinion in opinions %}
                    {% include 'CapcoAppBundle:Opinion:blockOpinion.html.twig' with {'opinion': opinion, 'opinionType': opinion.opinionType, 'showRanking': true, 'opinionTerm': project.opinionTerm} %}
                {% endfor %}
            </ul>
        {% endif %}

    </div>

    {% set route, params = 'app_project_show_opinions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug} %}

    {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPage, 'route': route, 'params': params} only  %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        App.pieChart();
    </script>
    {% if currentStep.customCode is defined and currentStep.customCode != '' %}{{ currentStep.customCode | raw }}{% endif %}
{% endblock %}
