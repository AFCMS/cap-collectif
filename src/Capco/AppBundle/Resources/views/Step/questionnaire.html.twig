{% extends '@CapcoApp/Project/base.html.twig' %}

{% set locale = request_locale(app.request) %}

{% block canonical_link %}{{ url('app_project_show_questionnaire', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, '_locale': locale}) }}{% endblock %}

{% block metaTags %}
    {% set image %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% set title = currentStep.title ~ ' ' ~ 'of.project' | trans({}, 'CapcoAppBundle') ~ ' ' ~ project.title %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       title,
        'type':        'project',
        'description': currentStep.metaDescription ?: currentStep.body|striptags|truncate(250, true),
        'author':      is_feature_enabled('profiles') ? url('capco_user_profile_show_all', {'slug': project.firstAuthor.slug, '_locale': locale}) : null,
        'image':       image,
        'url':         url('app_project_show_questionnaire', {'projectSlug': project.slug, 'stepSlug': currentStep.slug, '_locale': locale}),
    } only %}
{% endblock %}


{% block title %}
    {{ parent() }} - {{ project.title }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block details %}

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
            {% if currentStep.isClosed %}
                <div class="alert alert-info alert-dismissible  block" role="alert">
                    <p><strong>{{ 'step.questionnaire.alert.ended.title'|trans({}, 'CapcoAppBundle') }}</strong> {{ 'thank.for.contribution'|trans({}, 'CapcoAppBundle') }}</p>
                </div>
            {% endif %}

            {% if currentStep.isFuture %}
                <div class="alert alert-info alert-dismissible  block" role="alert">
                    <p><strong>{{ 'step.questionnaire.alert.future.title'|trans({}, 'CapcoAppBundle') }}</strong> {{ 'step.form.alert.future'|trans({'date': '<strong>' ~ currentStep.startAt| localizeddate('long', 'none', app.request.locale) ~ '</strong>'}, 'CapcoAppBundle') | raw }}</p>
                </div>
            {% endif %}

            {% if currentStep.questionnaire is null %}
                <div>
                    <p>
                        {{ 'step.questionnaire.no_form' | trans({}, 'CapcoAppBundle') }}
                    </p>
                </div>
            {% else %}
                {{ react_render_component('QuestionnaireStepPageApp', {'props': props}) }}
            {% endif %}
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% if currentStep.customCode is defined and currentStep.customCode != '' %}{{ currentStep.customCode | raw }}{% endif %}
{% endblock %}
