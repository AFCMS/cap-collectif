{% extends '@CapcoApp/Project/show.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Project/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12  col-sm-4  col-md-3">
                {{ render(controller('CapcoAppBundle:Site/Project:showMeta', {
                        'projectSlug': project.slug,
                        'currentStepSlug': currentStep.slug,
                    }))
                }}
            </div>

            <div class="col-xs-12  col-sm-8  col-md-9" id="details">

                <h2 class="h2">{{ currentStep.title }}</h2>
                {% if currentStep.body %}
                    <div class="block  block--bordered  box">
                        {{ currentStep.body | raw }}
                    </div>
                {% endif %}

                <div id="opinions--ranking" class="anchor-offset  block  block--bordered">

                    {% set opinionsLabel = project.opinionTerm == 0 ? 'project.ranking.opinions' : 'project.ranking.articles' %}
                    <div class="opinion opinion--default">
                        <div class="opinion__header  opinion__header--mobile-centered">
                            <h2 class="pull-left  h4  opinion__header__title">
                                {{ opinionsLabel | transchoice(opinions | length, {}, 'CapcoAppBundle')  }}
                            </h2>
                        </div>
                    </div>

                    {% if (opinions|length > 0) %}
                        <ul class="media-list  opinion__list">
                            {% for opinion in opinions %}
                                {% include 'CapcoAppBundle:Opinion:blockOpinion.html.twig' with {'opinion': opinion, 'opinionType': opinion.opinionType, 'showRanking': true, 'opinionTerm': project.opinionTerm} only %}
                            {% endfor %}
                        </ul>
                        {% if opinions | length > nbOpinionsToDisplay  %}
                            <div class="opinion  opinion__footer  box">
                                <a href="{{ path('app_project_show_opinions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}" class="text-center" style="display: block">
                                    {{ 'opinion.show.all'|trans({}, 'CapcoAppBundle') }}
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="project__empty-block  text-center">
                            <p class="icon  cap-bubble-attention-6"></p>
                            <p>{{ 'opinion.show.none'|trans({}, 'CapcoAppBundle') }}</p>
                        </div>
                    {% endif %}
                </div>

                {% if (versions | length > 0) %}
                    <div id="versions--ranking" class="anchor-offset  block  block--bordered">

                        <div class="opinion opinion--default">
                            <div class="opinion__header  opinion__header--mobile-centered">
                                <h2 class="pull-left  h4  opinion__header__title">
                                    {{ 'project.ranking.versions' | transchoice(versions | length, {}, 'CapcoAppBundle')  }}
                                </h2>
                            </div>
                        </div>

                        <ul class="media-list  opinion__list">
                            {% for version in versions %}
                                {% include 'CapcoAppBundle:Opinion:blockOpinion.html.twig' with {'opinion': version, 'isVersion': true, 'showRanking': true} only %}
                            {% endfor %}
                        </ul>
                        {% if versions | length > nbVersionsToDisplay  %}
                            <div class="opinion  opinion__footer  box">
                                <a href="{{ path('app_project_show_versions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}" class="text-center" style="display: block">
                                    {{ 'opinion.show.all'|trans({}, 'CapcoAppBundle') }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                    {% endif %}

            </div> <!-- col-xs-12  col-sm-8  col-md-9 -->
        </div> <!-- .row -->
    </div>

{% endblock %}
