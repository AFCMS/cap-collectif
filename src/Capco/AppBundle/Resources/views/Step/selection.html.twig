{% extends '@CapcoApp/Project/base.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_selection', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}
{% set title = currentStep.title ~ ' ' ~ 'of.project' | trans({}, 'CapcoAppBundle') ~ ' ' ~ project.title %}

{% block metaTags %}
    {% set image %}{% if project.Cover %}{% path project.Cover, 'blockHeader' %}{% endif %}{% endset %}
    {% set author = null %}
    {% if is_feature_enabled('profiles') %}
        {% set author = url('capco_user_profile_show_all', {'slug': project.author.slug}) %}
    {% endif %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       title,
        'type':        'project',
        'image':       image,
        'author':      author,
        'description': currentStep.body|striptags|truncate(250, true),
        'url':         url('app_project_show_selection', {'projectSlug': project.slug, 'stepSlug': currentStep.slug})
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ project.title }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block reduxStore %}
  {% set initialState = {
    'proposal': {
      'userVotesByStepId': project|proposal_votes_list(app.user),
      'creditsLeftByStepId': project|credits_list_list(app.user),
      'proposalsById': [],
      'proposalShowedId': [],
    }
  } %}
  {% include '@CapcoApp/redux_store.html.twig' with {'data' : initialState} %}
{% endblock %}

{% block details %}
    {% if currentStep.isClosed and currentStep.isVotable %}
        <div class="alert alert-info alert-dismissible  block" role="alert">
            <p><strong>{{ 'step.selection.alert.ended.title'|trans({}, 'CapcoAppBundle') }}</strong> {{ 'step.selection.alert.ended.text'|trans({}, 'CapcoAppBundle') }}</p>
        </div>
    {% endif %}

    {% if currentStep.isFuture %}
        <div class="alert alert-info alert-dismissible  block" role="alert">
            <p><strong>{{ 'step.selection.alert.future.title'|trans({}, 'CapcoAppBundle') }}</strong> {{ 'step.selection.alert.future.text'|trans({'%date%': '<strong>' ~ currentStep.startAt| localizeddate('long', 'none', app.request.locale) ~ '</strong>'}, 'CapcoAppBundle') | raw }}</p>
        </div>
    {% endif %}

    {{ react_render_component('ProposalStepPageApp', {'props': props}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=***REMOVED***&libraries=places"></script>
{% endblock %}
