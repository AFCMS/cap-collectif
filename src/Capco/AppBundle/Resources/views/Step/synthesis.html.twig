{% extends '@CapcoApp/Consultation/show.html.twig' %}

{% block canonical_link %}{{ url('app_consultation_show_synthesis', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block jumbotron %}
{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Consultation/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12  col-sm-4  col-md-3">
                {{ render(controller('CapcoAppBundle:Site/Consultation:showMeta', {'consultationSlug': consultation.slug, 'currentStepSlug': currentStep.slug})) }}
            </div>

            <div class="col-xs-12  col-sm-8  col-md-9" id="details">
                <h2 class="h2">
                    {{ currentStep.title }}
                    {% if currentStep.synthesis.editable and is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary pull-right" href="{{ path('app_consultation_edit_synthesis', {'consultationSlug': consultation.slug, 'stepSlug': currentStep.slug}) }}" title="{{ 'synthesis.edit.button' | trans({}, 'CapcoAppBundle') }}">
                            <i class="cap cap-pencil-1"></i>
                            {{ 'synthesis.edit.button' | trans({}, 'CapcoAppBundle') }}
                        </a>
                    {% endif %}
                </h2>

                <div class="block  block--bordered  box">
                    {{ currentStep.body | raw }}

                    {% if currentStep.synthesis == null %}
                        <p class="excerpt">{{ 'synthesis.show.no_synthesis' | trans({}, 'CapcoAppBundle') }}</p>
                    {% elseif not currentStep.synthesis.enabled %}
                        <p class="excerpt">{{ 'synthesis.show.not_enabled' | trans({}, 'CapcoAppBundle') }}</p>
                    {% else %}
                        <div id="render-synthesis-view-box" data-synthesis="{{ currentStep.synthesis.id }}"></div>
                    {% endif %}

                </div>
            </div> <!-- col-xs-12  col-sm-8  col-md-9 -->
        </div> <!-- .row -->
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var Synthesis = require('Resources/js/synthesis');
    </script>
{% endblock %}
