{% extends '@CapcoApp/Project/show.html.twig' %}

{% block canonical_link %}{{ url('app_project_show_versions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block metaTags %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       currentStep.title,
        'description': currentStep.body|striptags|truncate(250, true),
        'url':         url('app_project_show_versions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug})
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block body %}
    <div class="container  container--custom">
        {% include '@CapcoApp/Project/show_title.html.twig' %}
    </div>

    <div class="container  container--custom">
        <div class="row">
            <div class="col-xs-12  col-sm-4  col-md-3">
                {{ render(controller('CapcoAppBundle:Site/Project:showMeta', {
                        'projectSlug': project.slug,
                        'currentStepSlug': currentStep.slug,
                    }))
                }}
            </div>

            <div class="col-xs-12  col-sm-8  col-md-9" id="details">

                <p id="back-button">
                    <a href="{{ path('app_project_show_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}" class="btn btn-default">
                        <i class="cap cap-arrow-1-1"></i> {{ 'project.show.global.title' | trans({}, 'CapcoAppBundle') }}
                    </a>
                </p>

                <div id="opinions__ranking" class="anchor-offset  block  block--bordered">

                    <div class="opinion opinion--default">
                        <div class="opinion__header  opinion__header--mobile-centered">
                            <h2 class="pull-left  h4  opinion__header__title">
                                {{ 'project.ranking.versions' | transchoice(versions | length, {}, 'CapcoAppBundle')  }}
                            </h2>
                        </div>
                    </div>

                    {% if versions | length > 0 %}
                        <ul class="media-list  opinion__list">
                            {% for version in versions %}
                                {% include 'CapcoAppBundle:Opinion:blockOpinion.html.twig' with {'opinion': version, 'isVersion': true, 'showRanking': true} only %}
                            {% endfor %}
                        </ul>
                    {% endif %}

                </div>

                {% set route, params = 'app_project_show_versions_ranking', {'projectSlug': project.slug, 'stepSlug': currentStep.slug} %}

                {% include 'CapcoAppBundle:Block:pagination.html.twig' with {'current': page, 'nb': nbPage, 'route': route, 'params': params} only  %}

            </div> <!-- col-xs-12  col-sm-8  col-md-9 -->
        </div> <!-- .row -->
    </div>

{% endblock %}
