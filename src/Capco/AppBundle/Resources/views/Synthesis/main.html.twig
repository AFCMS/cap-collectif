{% extends '@CapcoApp/base.html.twig' %}

{% set page_class = "synthesis_page" %}

{% block canonical_link %}{{ url('app_project_edit_synthesis', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}) }}{% endblock %}

{% block metaTags %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       currentStep.title,
        'description': currentStep.body|striptags|truncate(250, true),
        'url':         url('app_project_edit_synthesis', {'projectSlug': project.slug, 'stepSlug': currentStep.slug}),
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ currentStep.title }}
{% endblock %}

{% block mainContent %}
    <div id="render-synthesis-edit-box" data-mode="edit" data-synthesis="{{ currentStep.synthesis.id }}"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        App.pieChart();
        var Synthesis = require('Resources/js/synthesis');
    </script>
{% endblock %}
