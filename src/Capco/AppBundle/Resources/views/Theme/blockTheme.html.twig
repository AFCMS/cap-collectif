<div class="col-lg-3  col-md-4  col-sm-6  col-xs-12">
    <div class="theme  block  block--bordered">

        {%  if theme.Media %}
            <a href="{{ path('app_theme_show', {'slug': theme.slug}) }}" alt="{{ theme.title }}">
                {% thumbnail theme.Media, 'theme' with {'title': theme.Media.name, 'alt': theme.Media.name, 'class': 'img-responsive'} %}
            </a>
        {% else %}
            <a class="bg__wrapper" href="{{ path('app_theme_show', {'slug': theme.slug}) }}" alt="{{ theme.title }}">
                <div class="bg--default bg--theme">
                    <svg version="1.1" id="Calque_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="110px" height="110px" viewBox="-162.5 -162.5 226.5 226.5" enable-background="new -162.5 -162.5 226.5 226.5" xml:space="preserve" style="margin: 0 auto; display: block;">
                        <path fill="none" stroke="#FFFFFF" stroke-width="10" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="M-27.254-143.396h-91.487c-20.386,0-36.596,16.21-36.596,36.595v32.934c0,20.386,16.525,32.934,36.907,32.934h14.323v40.252l36.436-40.252h40.417c20.382,0,40.251-16.21,40.251-36.595v-29.275C13.001-127.187-6.865-143.396-27.254-143.396z"/>
                        <path fill="none" stroke="#FFFFFF" stroke-width="10" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="M-52.87-4.331c0,12.74,9.215,21.952,21.959,21.952h21.952L20.32,46.896V17.621h13.662c12.814,0,23.17-10.445,23.066-23.256l-0.137-16.84c0-12.736-9.208-22.111-21.952-22.111"/>
                    </svg>
                </div>
            </a>
        {%  endif %}

        <div class="box">
            <h2 class="theme__title  h3"><a href="{{ path('app_theme_show', {'slug': theme.slug}) }}">{{ theme.title }}</a></h2>
            {% set nbConsultations = theme.countEnabledConsultations() %}
            {% set nbIdeas = theme.countEnabledIdeas() %}
            <p class="excerpt">
                {% transchoice nbConsultations with {'%count%': nbConsultations} from 'CapcoAppBundle' %}
                theme.index.consultations
                {% endtranschoice %}
                {% if is_feature_enabled('ideas') %}
                    â€¢
                    {% transchoice nbIdeas with {'%count%': nbIdeas} from 'CapcoAppBundle' %}
                        theme.index.ideas
                    {% endtranschoice %}
                {% endif %}
            </p>
            {% if theme.status is not null %}
                <p>
                    {% if theme.isOpened %}
                        <span class="label label-success">{{ 'theme.show.status.opened'|trans({}, 'CapcoAppBundle') }}</span>
                    {% elseif theme.isClosed %}
                        <span class="label label-danger">{{ 'theme.show.status.closed'|trans({}, 'CapcoAppBundle') }}</span>
                    {% elseif theme.isFuture %}
                        <span class="label label-info">{{ 'theme.show.status.future'|trans({}, 'CapcoAppBundle') }}</span>
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>
</div>
