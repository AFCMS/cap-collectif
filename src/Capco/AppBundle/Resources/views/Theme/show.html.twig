{% extends '@CapcoApp/Theme/index.html.twig' %}

{% block canonical_link %}{{ url('app_theme_show', {'slug': theme.slug}) }}{% endblock %}

{% block title %}
    {{ parent() }} - {{ theme.title }}
{% endblock %}

{% block jumbotron %}
	<div class="jumbotron  jumbotron--custom  jumbotron--bg-1  text-center">
	    <div class="container">
	        <h1 class="h2  h--no-border">{{ theme.title }}</h1>
            {{ theme.teaser |raw }}
	    </div>
	</div>
{% endblock %}

{% block body %}
    <div class="container  block">
        {% if theme.Media %}
            {% thumbnail theme.Media, 'idea' with {'class': 'block  img-responsive'} %}
        {% endif %}
        {% if theme.body %}
            <h2 class="h2">{{ 'theme.show.body_title'|trans({}, 'CapcoAppBundle') }}
            </h2>
            {{ theme.body|raw }}
        {% endif %}
        {% if theme.status != null %}
            <p class="theme__status">{{ 'theme.show.status.title'|trans({}, 'CapcoAppBundle') }}
                {% if theme.status == statuses.opened %}
                    <span class="label label-success">{{ 'theme.show.status.opened'|trans({}, 'CapcoAppBundle') }}</span>
                {% elseif theme.status == statuses.closed %}
                    <span class="label label-danger">{{ 'theme.show.status.closed'|trans({}, 'CapcoAppBundle') }}</span>
                {% elseif theme.status == statuses.future %}
                    <span class="label label-info">{{ 'theme.show.status.future'|trans({}, 'CapcoAppBundle') }}</span>
                {% endif %}
            </p>
        {% endif %}
    </div>

    {% if theme.Consultations|length > 0 %}
        <div class="container  block">
            <h2 class="h2">{{ 'homepage.consultations.last'|trans({}, 'CapcoAppBundle') }}</h2>
            {{ render(controller('CapcoAppBundle:Theme:themeConsultations', {'theme': theme})) }}
        </div>
    {% endif %}

    {{ render(controller('CapcoAppBundle:Theme:themeIdeas', {'theme': theme})) }}

    {% if theme.Events|length > 0 %}
        {{ render(controller('CapcoAppBundle:Theme:themeEvents', {'theme': theme})) }}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(window).on('load', function() {
            App.module.equalheight('.theme');window.onresize = App.module.resized('.theme');
            App.module.equalheight('.thumbnail--custom');window.onresize = App.module.resized('.thumbnail--custom');
            App.module.equalheight('.media--macro');window.onresize = App.module.resized('.media--macro');
        });
    </script>
{% endblock %}

