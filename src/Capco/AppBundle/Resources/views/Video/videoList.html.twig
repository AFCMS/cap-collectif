{% if videos > 0 %}
<div class="container">
    <div class="row">
        {% for video in videos %}
        <div class="col-xs-12  col-sm-6  col-md-4  col-lg-4">
            <div class="video block">
                {%  if video.Media %}
                    <a href="{{ video.link }}" class="play {% if video.color == "black" %} play--black {% endif %}fancybox" data-type="iframe">
                        {% thumbnail video.Media, 'consultation' with {'title': video.Media.name, 'alt': video.Media.name, 'class': 'img-responsive'} %}
                    </a>
                {% else %}
                    <a href="{{ video.link }}" class="play {% if video.color == "black" %} play--black {% endif %} fancybox" data-type="iframe">
                        <div class="bg--default bg--video"></div>
                    </a>
                {%  endif %}
                <h2 class="h4">{{ video.title }}</h2>
                <p class="excerpt">{{ video.body }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}