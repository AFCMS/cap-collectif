{% if comments|length > 0 %}
    {% set token = csrf_token('comment_vote') %}
    <ul class="media-list">
        {% for comment in comments %}
            {% include 'CapcoAppBundle:Comment:blockComment.html.twig' with {'comment': comment, 'profile': true, 'classes': 'block  block--bordered  box'} only %}
        {% endfor %}
    </ul>
{% else %}
    <div class="project__empty-block  text-center">
        <p class="icon  cap-bubble-star-2"></p>
        <p>{{ 'comment.none'|trans({}, 'CapcoAppBundle') }}</p>
    </div>
{% endif %}
