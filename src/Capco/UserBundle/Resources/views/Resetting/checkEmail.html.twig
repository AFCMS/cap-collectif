{% extends "CapcoUserBundle::layout.html.twig" %}
{% block title %} {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }} {% endblock %}

{% block jumbotron %}
    <div class="jumbotron  jumbotron--custom  jumbotron--bg-1  text-center">
        <div class="container">
            <h1 class="h2  h--no-border">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</h1>
        </div>
    </div>
{% endblock %}

{% block fos_user_content %}
    <div class="container">
        <h2 class="h2  title--first">{{ 'resetting.email.subject'|trans({}, 'FOSUserBundle') }}</h2>
        <div class="alert alert-success alert-dismissible  block" role="alert">
            <p>{{ 'resetting.check_email'|trans({'%email%': email}, 'FOSUserBundle') }}</p>
        </div>
    </div>
{% endblock %}
