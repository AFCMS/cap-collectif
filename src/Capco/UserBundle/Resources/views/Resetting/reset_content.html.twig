<div class="container">
    <div class="row">
        <div class="col-lg-4  col-lg-offset-4  col-md-6  col-md-offset-3  col-sm-8  col-sm-offset-2  col-xs-12">
            <div class="block--bordered  box">
                {{ form_errors(form.new.first) }}
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                    <div class="form-group">
                        <label for="password" class="control-label">{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}</label>
                        {{ form_widget(form.new.first) }}
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">{{ 'form.password_confirmation'|trans({}, 'SonataUserBundle') }}</label>
                        {{ form_widget(form.new.second) }}
                    </div>
                    {{ form_widget(form) }}
                    <div>
                        <input type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success btn-block  login__submit"/>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
