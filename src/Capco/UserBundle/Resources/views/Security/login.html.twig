{% extends "CapcoUserBundle::layout.html.twig" %}
{% block title %} Se connecter sur son profil {{ parent() }} {% endblock %}


{% block fos_user_content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-4  col-lg-offset-4  col-md-6  col-md-offset-3  col-sm-8  col-sm-offset-2  col-xs-12">
                <div class="block--shadowed  box">
                    <h4>{{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}</h4>
                    <p>Toutes les contributions soumises sur la plateforme sont rendues publiques.</p>
                    <div class="login__social__btns">
                        <p>
                            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" title="Sign in with Facebook" class="btn  btn-primary"><i class="cap-facebook"></i> <span class="sr-only">Facebook</span><span class="hidden-xs"> Facebook</span></a>
                            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" title="Sign in with Google" class="btn  btn-danger"><i class="cap-gplus"></i> <span class="sr-only">Google plus</span><span class="hidden-xs"> Google +</span></a>
                        </p>
                    </div>
                </div>
                <p class="text-center">ou</p>
                <div class="block--shadowed  box">
                    <h4>Inscrivez-vous par la m√©thode classique</h4>

                    {% block sonata_user_login_error %}
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <span>{{ error|trans({}, 'FOSUserBundle') }}</span>
                            </div>
                        {% endif %}
                    {% endblock %}

                    {% block sonata_user_login_form %}

                        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <div class="form-group">
                                <label for="username">{{ 'security.login.username'|trans({}, 'SonataUserBundle') }}</label>
                                <input type="text" class="form-control"  id="username" name="_username" placeholder="Enter email" required="required">
                                <p class="excerpt">Votre nom d'utilisateur est rendu public sur la plateforme.</p>
                            </div>
                            <div class="form-group">
                                <label for="password">{{ 'security.login.password'|trans({}, 'SonataUserBundle') }}</label>
                                <input type="password" class="form-control"  id="password" name="_password" placeholder="Password" required="required">
                            </div>
                            <p><a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a></p>
                            <p class="excerpt">Toutes les contributions soumises sur la plateforme sont rendues publiques.</p>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" checked="checked" required="required"> J'accepte la <a href="#">charte</a>.
                                </label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <p class="excerpt">Toutes les contributions soumises sur la plateforme sont rendues publiques.</p>
                            <button type="submit" class="btn  btn-success  btn-block">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                            <hr>
                            <p><a href="{{ path('fos_user_registration_register') }}" class="btn  btn-default  btn-block">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></p>
                        </form>
                    {% endblock %}
                </div>
            </div>
        </div>

    </div>

{% endblock fos_user_content %}
